{% doc %}
  @prompt
    Create a Store Locations Grid Section where I can easily add, edit, and delete stores.
    
    Requirements:
    Heading and Short description
    
    Display stores in a 3-column grid on desktop and a single column on mobile.
    
    Each store block must include:
    
    1. Store Image (uploadable)
    2. Store Name
    3 . Full Address (Clickable that opens the store address location in Google Maps in a new tab.)
    4. Phone Number
    
    
    All fields should be editable within the Shopify theme editor, and I should be able to add an unlimited number of store blocks. and need to add the Google map link
    
    Styling should be clean, minimal, and responsive.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-store-locations-{{ ai_gen_id }} {
    padding: 60px 0;
  }

  .ai-store-locations__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-store-locations__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 500;
    color: #1c1c1c;
    margin: 0 0 15px;
  }

  .ai-store-locations__description-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666666;
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-store-locations__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-store-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border: 1px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-store-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-store-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    overflow: hidden;
    position: relative;
  }

  .ai-store-card__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-store-card-{{ ai_gen_id }}:hover .ai-store-card__image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-store-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-store-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 150px;
    max-height: 150px;
  }

  .ai-store-card__content-{{ ai_gen_id }} {
    padding: 25px;
  }

  .ai-store-card__name-{{ ai_gen_id }} {
    font-size: 20px;
    font-weight: 500;
    color: #1c1c1c;
    margin: 0 0 15px;
  }

  .ai-store-card__info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-store-card__info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    font-size: 14px;
    color: #666666;
  }

  .ai-store-card__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    margin-top: 2px;
  }

  .ai-store-card__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-store-card__address-link-{{ ai_gen_id }} {
    color: #666666;
    text-decoration: none;
    transition: color 0.3s ease;
    flex: 1;
  }

  .ai-store-card__address-link-{{ ai_gen_id }}:hover {
    color: #df9a7c;
  }

  .ai-store-card__phone-{{ ai_gen_id }} {
    flex: 1;
  }

  @media screen and (max-width: 991px) {
    .ai-store-locations__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 767px) {
    .ai-store-locations-{{ ai_gen_id }} {
      padding: 40px 0;
    }

    .ai-store-locations__header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-store-locations__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-store-locations__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-store-card__image-{{ ai_gen_id }} {
      height: 200px;
    }

    .ai-store-card__content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
