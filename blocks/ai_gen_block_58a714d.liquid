{% doc %}
  @prompt
    Adjust the category boxes under the Jewellery section.
    
    Requirements:
    
    Corner Radius
    
    Add rounded corners (increase corner radius as needed — e.g., 10–16px).
    
    Desktop Layout
    
    Display 6 category boxes per row.
    
    Mobile Layout
    
    Display 3 columns × 2 rows (total 6 boxes visible).
    
    Ensure auto-wrapping and equal spacing.
    
    Padding / Spacing
    
    Add padding inside each box so the content doesn’t touch the edges.
    
    Add outer margin or grid gap between boxes.
    
    Expected Output:
    
    CSS or theme code (Liquid + CSS) that:
    
    Controls box size and spacing.
    
    Works responsively on desktop and mobile.
    
    Applies rounded corners.
    
    Ensures padding inside each box.
    
    Selector Notes:
    
    Target the category cards or grid using classes such as:
    
    .collection-list
    
    .collection-card
    
    .collection-grid
    (Use whichever matches theme.)
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    padding: 0;
    margin: 0;
  }

  .ai-category-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.corner_radius }}px;
    background-color: {{ block.settings.card_background }};
    padding: {{ block.settings.card_padding }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: {{ block.settings.card_min_height }}px;
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.image_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_corner_radius }}px;
  }

  .ai-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_corner_radius }}px;
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-category-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-category-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-category-link-{{ ai_gen_id }}:hover .ai-category-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_hover_color }};
  }

  @media screen and (max-width: 991px) {
    .ai-category-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
      gap: {{ block.settings.grid_gap_tablet }}px;
    }
  }

  @media screen and (max-width: 767px) {
    .ai-category-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-category-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding_mobile }}px;
      min-height: {{ block.settings.card_min_height_mobile }}px;
    }

    .ai-category-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-category-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..12) %}
    {% liquid
      assign collection_key = 'collection_' | append: i
      assign collection = block.settings[collection_key]
    %}

    {% if collection != blank %}
      <div class="ai-category-card-{{ ai_gen_id }}">
        <a href="{{ collection.url }}" class="ai-category-link-{{ ai_gen_id }}">
          {% if collection.featured_image %}
            <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ collection.featured_image | image_url: width: 400 }}"
                alt="{{ collection.title | escape }}"
                width="400"
                height="400"
                loading="lazy"
                class="ai-category-image-{{ ai_gen_id }}"
              >
            </div>
          {% else %}
            <div class="ai-category-placeholder-{{ ai_gen_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <h3 class="ai-category-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>

