{% doc %}
  @prompt
    bar for metal price display scrolling on top of header need to add metal type and rate accordingly, need to be separator A dot bigger than usual and centre alight and need to change font and colour, never stop scroling scroll back to back
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-metal-price-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.bar_height }}px 0;
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .ai-metal-price-bar__wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    animation: ai-metal-price-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-metal-price-bar__item-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    margin-right: {{ block.settings.item_spacing }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    font-family: {{ block.settings.custom_font }};
  }

  .ai-metal-price-bar__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-right: 8px;
    flex-shrink: 0;
  }

  .ai-metal-price-bar__metal-{{ ai_gen_id }} {
    font-weight: {{ block.settings.metal_font_weight }};
    margin-right: 6px;
  }

  .ai-metal-price-bar__rate-{{ ai_gen_id }} {
    color: {{ block.settings.rate_color }};
    font-weight: {{ block.settings.rate_font_weight }};
  }

  .ai-metal-price-bar__separator-{{ ai_gen_id }} {
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
    font-weight: bold;
    line-height: 1;
  }

  @keyframes ai-metal-price-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-metal-price-bar__item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }

    .ai-metal-price-bar__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-metal-price-bar__separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.separator_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-metal-price-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-metal-price-bar__wrapper-{{ ai_gen_id }}">
    {% liquid
      assign metal_items = ''
      
      if block.settings.metal_1_name != blank and block.settings.metal_1_rate != blank
        assign metal_items = metal_items | append: '1,'
      endif
      
      if block.settings.metal_2_name != blank and block.settings.metal_2_rate != blank
        assign metal_items = metal_items | append: '2,'
      endif
      
      if block.settings.metal_3_name != blank and block.settings.metal_3_rate != blank
        assign metal_items = metal_items | append: '3,'
      endif
      
      if block.settings.metal_4_name != blank and block.settings.metal_4_rate != blank
        assign metal_items = metal_items | append: '4,'
      endif
      
      if block.settings.metal_5_name != blank and block.settings.metal_5_rate != blank
        assign metal_items = metal_items | append: '5,'
      endif
      
      if block.settings.metal_6_name != blank and block.settings.metal_6_rate != blank
        assign metal_items = metal_items | append: '6,'
      endif
      
      assign metal_array = metal_items | split: ','
    %}

    {% for i in (1..2) %}
      {% for metal_num in metal_array %}
        {% if metal_num != blank %}
          {% liquid
            assign metal_name_key = 'metal_' | append: metal_num | append: '_name'
            assign metal_rate_key = 'metal_' | append: metal_num | append: '_rate'
            assign metal_icon_key = 'metal_' | append: metal_num | append: '_icon'
            
            assign metal_name = block.settings[metal_name_key]
            assign metal_rate = block.settings[metal_rate_key]
            assign metal_icon = block.settings[metal_icon_key]
          %}

          <div class="ai-metal-price-bar__item-{{ ai_gen_id }}">
            {% if metal_icon %}
              <img 
                src="{{ metal_icon | image_url: width: 100 }}" 
                alt="{{ metal_name }}"
                class="ai-metal-price-bar__icon-{{ ai_gen_id }}"
                loading="lazy"
                width="100"
                height="100"
              >
            {% endif %}
            <span class="ai-metal-price-bar__metal-{{ ai_gen_id }}">{{ metal_name }}:</span>
            <span class="ai-metal-price-bar__rate-{{ ai_gen_id }}">{{ metal_rate }}</span>
          </div>

          {% unless forloop.last and i == 2 %}
            <span class="ai-metal-price-bar__separator-{{ ai_gen_id }}">●</span>
          {% endunless %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
</div>

