  .ai-slider-showcase-container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    position: relative;
  }

  .ai-slider-showcase-wrapper-{{ ai_gen_id }} {
    overflow: hidden;
    position: relative;
  }

  .ai-slider-showcase-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap_between_items }}px;
    transition: transform 0.5s ease;
  }

  .ai-slider-showcase-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.gap_between_items }}px * 2)) / 3);
    max-width: calc((100% - ({{ block.settings.gap_between_items }}px * 2)) / 3);
  }

