    create a photo section, main heading and sub heading, image , content (heading and text areas), need more content space (heading and text) may have many heading and content, image can be in centre, need 10 content area
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-photo-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-photo-section-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-photo-section-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-photo-section-main-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_heading_size }}px;
    font-weight: {{ block.settings.main_heading_weight }};
    color: {{ block.settings.main_heading_color }};
    margin: 0 0 {{ block.settings.heading_gap }}px;
    line-height: 1.3;
  }

  .ai-photo-section-sub-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.sub_heading_size }}px;
    font-weight: {{ block.settings.sub_heading_weight }};
    color: {{ block.settings.sub_heading_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-photo-section-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin: 0 auto {{ block.settings.image_bottom_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  {% if block.settings.image %}
    .ai-photo-section-image-{{ ai_gen_id }} {
      width: 100%;
      height: auto;
      display: block;
      border-radius: {{ block.settings.image_border_radius }}px;
    }
  {% else %}
    .ai-photo-section-image-placeholder-{{ ai_gen_id }} {
      background-color: #f4f4f4;
      width: 100%;
      aspect-ratio: 16 / 9;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      border-radius: {{ block.settings.image_border_radius }}px;
    }

    .ai-photo-section-image-placeholder-{{ ai_gen_id }} svg {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .ai-photo-section-empty-state-{{ ai_gen_id }} {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      padding: 12px 20px;
      font-size: 14px;
      color: #666;
      text-align: center;
      pointer-events: none;
    }
  {% endif %}

  .ai-photo-section-content-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-photo-section-content-item-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.content_item_spacing }}px;
  }

  .ai-photo-section-content-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-photo-section-content-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_heading_size }}px;
    font-weight: {{ block.settings.content_heading_weight }};
    color: {{ block.settings.content_heading_color }};
    margin: 0 0 {{ block.settings.content_text_gap }}px;
    line-height: 1.4;
    text-align: {{ block.settings.content_alignment }};
  }

  .ai-photo-section-content-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_text_size }}px;
    color: {{ block.settings.content_text_color }};
    line-height: 1.7;
    margin: 0;
    text-align: {{ block.settings.content_alignment }};
  }

  .ai-photo-section-content-text-{{ ai_gen_id }} p {
    margin: 0 0 15px;
  }

  .ai-photo-section-content-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-photo-section-main-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_heading_size | times: 0.75 }}px;
    }

    .ai-photo-section-sub-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.sub_heading_size | times: 0.9 }}px;
    }

    .ai-photo-section-content-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_heading_size | times: 0.8 }}px;
    }

    .ai-photo-section-content-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_text_size | times: 0.9 }}px;
    }

    .ai-photo-section-image-wrapper-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.image_bottom_spacing | times: 0.7 }}px;
    }

    .ai-photo-section-content-item-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.content_item_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-photo-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-photo-section-container-{{ ai_gen_id }}">
    {% if block.settings.main_heading != blank or block.settings.sub_heading != blank %}
      <div class="ai-photo-section-header-{{ ai_gen_id }}">
        {% if block.settings.main_heading != blank %}
          <h2 class="ai-photo-section-main-heading-{{ ai_gen_id }}">
            {{ block.settings.main_heading }}
          </h2>
        {% endif %}
        {% if block.settings.sub_heading != blank %}
          <p class="ai-photo-section-sub-heading-{{ ai_gen_id }}">
            {{ block.settings.sub_heading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-photo-section-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1600 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-photo-section-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-photo-section-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-photo-section-empty-state-{{ ai_gen_id }}">
            Add an image to get started
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-photo-section-content-wrapper-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% assign heading_key = 'content_heading_' | append: i %}
        {% assign text_key = 'content_text_' | append: i %}
        {% assign heading_value = block.settings[heading_key] %}
        {% assign text_value = block.settings[text_key] %}

        {% if heading_value != blank or text_value != blank %}
          <div class="ai-photo-section-content-item-{{ ai_gen_id }}">
            {% if heading_value != blank %}
              <h3 class="ai-photo-section-content-heading-{{ ai_gen_id }}">
                {{ heading_value }}
              </h3>
            {% endif %}
            {% if text_value != blank %}
              <div class="ai-photo-section-content-text-{{ ai_gen_id }}">
                {{ text_value }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

