{% doc %}
  @prompt
    Adjust the category boxes under the Jewellery section.
    
    Requirements:
    Heading 
    
    Corner Radius
    
    Add rounded corners (increase corner radius as needed — e.g., 10–16px).
    
    Desktop Layout
    
    Display 6 category boxes per row.
    
    Mobile Layout
    
    Display 3 columns × 2 rows (total 6 boxes visible).
    
    Ensure auto-wrapping and equal spacing.
    
    Padding / Spacing
    
    Add padding inside each box so the content doesn’t touch the edges.
    
    Add outer margin or grid gap between boxes.
    
    Expected Output:
    
    CSS or theme code (Liquid + CSS) that:
    
    Controls box size and spacing.
    
    Works responsively on desktop and mobile.
    
    Applies rounded corners.
    
    Ensures padding inside each box.
    
    Selector Notes:
    
    Target the category cards or grid using classes such as:
    
    .collection-list
    
    .collection-card
    
    .collection-grid
    (Use whichever matches theme.), also need heading for this section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
  }

  .ai-category-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-category-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: 1.2;
  }

  .ai-category-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_font_size }}px;
    font-weight: {{ block.settings.subheading_font_weight }};
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.desktop_columns }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-category-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.corner_radius }}px;
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    padding: {{ block.settings.card_padding }}px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: {{ block.settings.card_min_height }}px;
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
    border-color: {{ block.settings.border_hover_color }};
  }

  .ai-category-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-category-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_corner_radius }}px;
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    transition: color 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-category-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin-top: {{ block.settings.description_spacing }}px;
    line-height: 1.5;
  }

  .ai-category-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .ai-category-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px {{ block.settings.mobile_padding }}px;
    }

    .ai-category-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_font_size }}px;
    }

    .ai-category-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_font_size }}px;
    }

    .ai-category-header-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.mobile_heading_spacing }}px;
    }

    .ai-category-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_columns }}, 1fr);
      gap: {{ block.settings.mobile_grid_gap }}px;
    }

    .ai-category-card-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_card_padding }}px;
      min-height: {{ block.settings.mobile_card_min_height }}px;
    }

    .ai-category-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_font_size }}px;
    }

    .ai-category-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_description_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank or block.settings.subheading != blank %}
    <div class="ai-category-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-category-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <p class="ai-category-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-category-grid-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% liquid
        assign category_title_key = 'category_' | append: i | append: '_title'
        assign category_image_key = 'category_' | append: i | append: '_image'
        assign category_link_key = 'category_' | append: i | append: '_link'
        assign category_description_key = 'category_' | append: i | append: '_description'
        
        assign category_title = block.settings[category_title_key]
        assign category_image = block.settings[category_image_key]
        assign category_link = block.settings[category_link_key]
        assign category_description = block.settings[category_description_key]
      %}

      {% if category_title != blank or category_image != blank %}
        <div class="ai-category-card-{{ ai_gen_id }}">
          {% if category_link != blank %}
            <a href="{{ category_link }}" class="ai-category-link-{{ ai_gen_id }}" aria-label="{{ category_title }}"></a>
          {% endif %}

          {% if category_image != blank %}
            <div class="ai-category-image-{{ ai_gen_id }}">
              <img
                src="{{ category_image | image_url: width: 400 }}"
                alt="{{ category_title | escape }}"
                loading="lazy"
                width="{{ category_image.width }}"
                height="{{ category_image.height }}"
              >
            </div>
          {% endif %}

          {% if category_title != blank %}
            <h3 class="ai-category-title-{{ ai_gen_id }}">{{ category_title }}</h3>
          {% endif %}

          {% if category_description != blank %}
            <div class="ai-category-description-{{ ai_gen_id }}">{{ category_description }}</div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

