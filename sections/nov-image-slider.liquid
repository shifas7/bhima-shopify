{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif

  if settings.lang_iso_rtl != blank
    assign list_iso_rtl = settings.lang_iso_rtl | downcase
    if list_iso_rtl contains request.locale.iso_code and settings.enable_rtl
      assign iso_rtl = true
    else
      assign iso_rtl = false
    endif
  endif
-%}

{%- style -%}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .distance {
    {% if iso_rtl %}
      padding-left: {{ sst.pr_xs }}px;
      padding-right: {{ sst.pl_xs }}px;
    {% else %}
      padding-left: {{ sst.pl_xs }}px;
      padding-right: {{ sst.pr_xs }}px;
    {% endif %}
  }

  #shopify-section-{{ section.id }} .nov-slick-carousel {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .image-slider__item {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .title {
    color: {{ sst.t_c }};
    font-size: {{ sst.t_s | divided_by: 10.0}}rem;
    letter-spacing: {{ sst.t_let }}px;
    margin-bottom: {{ sst.t_mb }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .sub_title {
    color: {{ sst.st_c }};
    font-size: {{ sst.st_s | divided_by: 10.0}}rem;
    letter-spacing: {{ sst.st_let }}px;
    margin-bottom: {{ sst.st_mb }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .desc {
    color: {{ sst.d_c }};
    font-size: {{ sst.d_s | divided_by: 10.0}}rem;
    letter-spacing: {{ sst.d_let }}px;
    margin-bottom: {{ sst.d_mb }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .link {
    --color-link: {{ sst.btn_color }};
    --color-hover: {{ sst.btn_color_act }};
  }
  #shopify-section-{{ section.id }} .block-nav {
    background: {{ sst.block_nav_bg }};
    --slider-dot-color: {{ sst.dots_color }};
    --slider-dot-color-act: {{ sst.dots_color_act }};
    --slider-arrow-color: {{ sst.nav_color }};
    --slider-arrow-color-act: {{ sst.nav_color_act }};
  }
  @media(max-width:  991px) {
    #shopify-section-{{ section.id }} .bl_t .title {
      font-size: {{ sst.t_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.t_mb_md }}px;
    }
    #shopify-section-{{ section.id }} .bl_t .sub_title {
      font-size: {{ sst.st_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.st_mb_md }}px;
    }
    #shopify-section-{{ section.id }} .bl_t .desc {
      font-size: {{ sst.d_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.d_mb_md }}px;
    }
  }
  @media(max-width:  767px) {
    #shopify-section-{{ section.id }} .bl_t .title {
      font-size: {{ sst.t_s_sm | divided_by: 10.0}}rem;
    }
    #shopify-section-{{ section.id }} .bl_t .sub_title {
      font-size: {{ sst.st_s_sm | divided_by: 10.0}}rem;
    }
    #shopify-section-{{ section.id }} .bl_t .desc {
      font-size: {{ sst.d_s_sm | divided_by: 10.0}}rem;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      {% if iso_rtl %}
        padding-left: {{ sst.pr_md }}px;
        padding-right: {{ sst.pl_md }}px;
      {% else %}
        padding-left: {{ sst.pl_md }}px;
        padding-right: {{ sst.pr_md }}px;
      {% endif %}
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      {% if iso_rtl %}
        padding-left: {{ sst.pr_xl }}px;
        padding-right: {{ sst.pl_xl }}px;
      {% else %}
        padding-left: {{ sst.pl_xl }}px;
        padding-right: {{ sst.pr_xl }}px;
      {% endif %}
    }
  }
  {% if sst.aspect != 'auto' %}
    #shopify-section-{{ section.id }} video {
      position: absolute;
      top: 0;
      left: 0;
      height: 100% !important;
    }
  {% endif %}
{%- endstyle -%}

<div class="color-{{ sst.color_section }}{{ bg_class_full }}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% if section.blocks.size > 0 %}
        {% render 'heading-section', sub_position: sst.subheading_position %}
        <div class="nov-slick-carousel row spacing-{{ sst.spacing }} spacing-xs-10 {{ sst.style }} video-current-play{% if sst.animate %} wow fadeInUp{% endif %}"
          data-autoplay="{{ sst.auto }}"
          data-autoplaytimeout="{{ sst.time }}000"
          data-loop="true" 
          data-speed="1000"
          data-dots="{{ sst.show_dots }}"
          data-nav="false"
          data-items_xxl="{{ sst.xxl }}" 
          data-items_xl="{{ sst.xl }}" 
          data-items_lg="{{ sst.lg }}" 
          data-items_md="{{ sst.md }}" 
          data-items_sm="{{ sst.sm }}" 
          data-items_xs="{{ sst.xs }}"
          data-row="1"
          data-focus="false"
          data-hover="false"
          {% if sst.show_nav %}
            data-custnav
          {% endif %}
          {% if sst.style == 'style2' %}
            data-center="true"
          {% endif %}
          {% if sst.one_slider == true %}data-oneslider="1"{% endif %}>
          {% for block in section.blocks %}
          {% assign bst = block.settings %}
          {% if sst.aspect == '11' %}
            {% assign padding_video = 100 %}
          {% elsif sst.aspect == '34' %}
            {% assign padding_video = 133.33333333333334 %}
          {% elsif sst.aspect == '43' %}
            {% assign padding_video = 75 %}
          {% else %}
            {% assign padding_video = bst.image.aspect_ratio | times: 100 %}
          {% endif %}
            <div class="sp-item{% render 'number-to-col' %}">
              <div class="image-slider__item position-relative overflow_hidden{% if bst.video != blank %} d-flex{% endif %}{% if sst.img_animate %} nov-sh-image-2 no-sh-xs{% endif %} block-{{ forloop.index }}{% if sst.enable_shadow %} box-shadow-2{% endif %}"{% if bst.video != blank and sst.aspect != 'auto' %} style="padding-top: {{ padding_video | append: '%' }}"{% endif %}>
                {% if bst.link != blank %}
                  <a href="{{ bst.link }}" class="image-slider__link{% if bst.video != blank %} d-flex w-100{% endif %}">
                {% endif %}
                {% if bst.image != blank or bst.video != blank %}
                  {% if bst.image != blank and bst.video == blank %}
                    {%- render 'nov-aspect-image', image: bst.image, aspect: sst.aspect -%}
                  {% endif %}
                  {% if bst.video != blank %}
                    {{ bst.video | video_tag: image_size: '1100x', autoplay: true, loop: true, controls: false, muted: true, data-alt: shop.name, style: "width: 100%;max-width: 100%;height: auto;object-fit: cover;" }}
                  {% endif %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                  {{ 'hero-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% if bst.link != blank %}
                  </a>
                {% endif %}
                {% if sst.show_block_text %}
                  <div class="bl_t position-absolute {{ bst.align }}">
                    {% if bst.title != blank %}
                      <div class="title {{ sst.t_fw }} {{ sst.t_ff }}">{{ bst.title }}</div>
                    {% endif %}
                    {% if bst.stitle != blank %}
                      <div class="sub_title {{ sst.st_fw }} {{ sst.st_ff }}">{{ bst.stitle }}</div>
                    {% endif %}
                    {% if bst.desc != blank %}
                      <div class="desc {{ sst.d_fw }} {{ sst.d_ff }}">{{ bst.desc }}</div>
                    {% endif %}
                    {% if bst.btn_label != blank %}
                      <a href="{{ bst.link }}" class="link">
                        <span>{{ bst.btn_label }}</span>
                        <i class="zmdi zmdi-long-arrow-right"></i>
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        {% if sst.show_dots or sst.show_nav %}
          <div class="text-center mt-40">
            <div class="block-nav d-inline-flex align-items-center justify-content-center">
              {% if sst.show_nav %}
                <div class="nav-arrow nav-prev pointer">
                  {% render 'icon-chevron-left' %}
                </div>
              {% endif %}
              <div class="append-dots"></div>
              {% if sst.show_nav %}
                <div class="nav-arrow nav-next pointer">
                  {% render 'icon-chevron-right' %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endif %}

      {% if section.blocks.size == 0 %}
        {% render 'no-blocks' %}
      {% endif %}
    </div>
  </div>
</div>
