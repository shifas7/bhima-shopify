
{%- liquid 
  assign sst = section.settings
  
  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if sst.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif

-%}
{% style %}
  {% render 'nov-section-style' %}
  
  #shopify-section-{{ section.id }} .card_gallery, #shopify-section-{{ section.id }} .gallery-content-inner {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .row {
    margin: {{ sst.spacing | times: -0.5 }}px;
  }
  #shopify-section-{{ section.id }} .gallery-content {
    padding: {{ sst.spacing | times: 0.5 }}px;
  }
  #shopify-section-{{ section.id }} .gallery-content-inner {
    background: {{ sst.bg_title }};
  }
{% endstyle %}

<div class="container-outer{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }} position-relative">
    <div class="container-inner{{ bg_class_contain }}">
      <div class="row">
        <div class="gallery-content block-title sp-item">
          <div class="gallery-content-inner h-100 d-flex flex-column">
            {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-lg-20' %}
            {% if sst.link_label %}
              <a href="{{ sst.link }}" class="link text-uppercase font-500">
                {{ sst.link_label }}
                <i class="zmdi zmdi-long-arrow-right"></i>
              </a>
            {% endif %}
          </div>
        </div>
        {% for block in section.blocks %}
          <div class="gallery-content">
            <div class="card_gallery hover-image d-block overflow_hidden position-relative">
              <a href="{{ block.settings.image | image_url: width: 1200 }}" class="d-block" data-fancybox="gallery">
                {% if block.settings.image != blank %}
                  {% render 'nov-aspect-image', image: block.settings.image, aspect: sst.aspect %}
                  <i class="fa fa-instagram" aria-hidden="true"></i>
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

