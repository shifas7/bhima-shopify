<div class="container-outer{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="row {% if sst.spacing_1 %}spacing-1{% else %}spacing-{{ sst.spacing }}{% endif %}">
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          <div class="col-lg col-md-6 col-12 split-image__column{% if sst.spacing_1 == false %} mb-{{ sst.spacing }}{% endif %}{% if bst.class != blank %} {{ bst.class }}{% endif %}">
            <div class="split-image__item overflow_hidden position-relative color-{{ bst.color }}">

              {% if bst.link != blank %}
                <a class="gallery-image__link" href="{{ bst.link }}">
              {% endif %}

              {% if bst.image != blank %}
                <img src="{{ bst.image | image_url: width: 1 }}" data-src="{{ bst.image | image_url: width: 1200 }}" class="lazyload" width="{{ bst.image.width }}" height="{{ bst.image.height }}" alt="{{ bst.image.alt | default: 'image' }}">
              {% else %}
                {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                {{ 'hero-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}

              {% if bst.link != blank %}
                </a>
              {% endif %}

              {% if bst.title != blank or bst.stitle != blank or bst.btn_label != blank %}
                <div class="image-content position-absolute {{ sst.text_align }}">
                  {% if bst.title != blank %}
                  <div class="content-title {{ sst.title_ff }} {{ sst.title_fw }} color-title">{{ bst.title }}</div>
                  {% endif %}
                  {% if bst.stitle != blank %}
                    <div class="content-stitle {{ sst.stitle_ff }} {{ sst.stitle_fw }} color-text">{{ bst.stitle }}</div>
                  {% endif %}
                  {% if bst.btn_label != blank %}
                    <a href="{{ bst.link }}" class="link">
                      <span>{{ bst.btn_label }}</span>
                      <i class="zmdi zmdi-long-arrow-right"></i>
                    </a>
                  {% endif %}
                </div>
              {% endif %}
              {% if bst.heading != blank %}
                <div class="content-heading position-absolute font-600 color-title">{{ bst.heading }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div><!-- End row -->
    </div>
  </div><!-- End container -->
</div>
