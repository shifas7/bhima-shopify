{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}
{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .split-image__item {
    border-radius: {{ sst.bd_radius}}px;
  }

  #shopify-section-{{ section.id }} .content-title {
    font-size: {{ sst.title_fz_xs }}px;
    line-height: {{ sst.title_lh }};
    letter-spacing: {{ sst.title_letter }}px;
    margin-bottom: clamp(5px, {{ sst.title_mb | times: 0.6 }}px, 20px);
  }
  #shopify-section-{{ section.id }} .content-stitle {
    font-size: {{ sst.stitle_fz_xs }}px;
    line-height: {{ sst.stitle_lh }};
    letter-spacing: {{ sst.stitle_letter }}px;
    margin-bottom: clamp(5px, {{ sst.stitle_mb | times: 0.6 }}px, 20px);
  }
  #shopify-section-{{ section.id }} .content-stitle p {
    max-width: {{ sst.stitle_mw }}px;
    display: inline-flex;
  }
  #shopify-section-{{ section.id }} .content-stitle a {
    --color-link: {{ sst.stitle_color }};
  }
  @media(min-width: 576px) {
    #shopify-section-{{ section.id }} .content-title {
      font-size: {{ sst.title_fz_sm}}px;
      margin-bottom: clamp(5px, {{ sst.title_mb | times: 0.7 }}px, 20px);
    }
    #shopify-section-{{ section.id }} .content-stitle {
      font-size: {{ sst.stitle_fz_sm}}px;
      margin-bottom: clamp(5px, {{ sst.stitle_mb | times: 0.7 }}px, 20px);
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .content-title {
      font-size: {{ sst.title_fz_md}}px;
    }
    #shopify-section-{{ section.id }} .content-stitle {
      font-size: {{ sst.stitle_fz_md}}px;
    }
  }
  @media(min-width: 992px) {
    #shopify-section-{{ section.id }} .content-title {
      font-size: {{ sst.title_fz_lg }}px;
      margin-bottom: {{ sst.title_mb | times: 0.8 }}px;
    }
    #shopify-section-{{ section.id }} .content-stitle {
      font-size: {{ sst.stitle_fz_lg }}px;
      margin-bottom: {{ sst.stitle_mb | times: 0.8 }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .content-title {
      font-size: {{ sst.title_fz_xl }}px;
      margin-bottom: {{ sst.title_mb }}px;
    }
    #shopify-section-{{ section.id }} .content-stitle {
      font-size: {{ sst.stitle_fz_xl}}px;
      margin-bottom: {{ sst.stitle_mb }}px;
    }
  }
  @media(min-width: 1441px) {
    #shopify-section-{{ section.id }} .content-title {
      font-size: {{ sst.title_fz_xxl}}px;
    }
    #shopify-section-{{ section.id }} .content-stitle {
      font-size: {{ sst.stitle_fz_xxl}}px;
    }
  }

  @media(min-width: 992px) {
    #shopify-section-{{ section.id }} .split-image__column {
      height: {{ sst.h_lg }}px !important;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .split-image__column {
      height: {{ sst.h_xl }}px !important;
    }
  }
  @media(min-width: 1600px) {
    #shopify-section-{{ section.id }} .split-image__column {
      height: {{ sst.h_xxl }}px !important;
    }
  }
  @media(min-width: 2000px) {
    #shopify-section-{{ section.id }} .split-image__column {
      height: {{ sst.h_xxxl }}px !important;
    }
  }
