{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif

  assign collection = collections[sst.collection]
  assign product_limit = sst.limit
-%}
{% style %}
  {% render 'nov-section-style' %}

  {% if sst.show_pagination_progress %}
    #shopify-section-{{ section.id }} .swiper-scrollbar {
      background: {{ sst.pagination_progress_bg }} !important;
    }
    #shopify-section-{{ section.id }} .swiper-scrollbar-drag {
      background: {{ sst.progress_bg }} !important;
    }
  {% endif %}

  {% if sst.show_nav %}
    #shopify-section-{{ section.id }} .slider-nav {
      --slider-arrow-color: {{ sst.slider_arrow_color }};
      --slider-arrow-color-act: {{ sst.slider_arrow_color_act }};
    }
  {% endif %}

  {% if sst.enable_custom_style %}
    #shopify-section-{{ section.id }} {
      --product-color-border: {{ sst.product_border_color }};
      --product-color-background: {{ sst.product_background_color }};
      --product-color-type: {{ sst.product_type_color }};
      --product-color-title: {{ sst.product_title_color }};
      --product-color-title-hover: {{ sst.product_title_color_hover }};
      --product-color-price: {{ sst.product_price_color }};
      --product-color-reduced-price: {{ sst.product_price_reduced_color }};
    }
  {% endif %}
{% endstyle %}
<div class="{{ bg_class_full }}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }} {{ sst.dots_color }} {{ sst.arrow_color }}{% if sst.animate %} wow fadeInUp{% endif %}">
      {% render 'heading-section', sub_position: sst.subheading_position %}

      {% if section.blocks.size > 0 %}
        <div class="row spacing-{{ sst.spacing }}">
          <div class="col-lg-3 col-md-4 mb-sm-{{ sst.spacing }} mb-xs-10" data-section-id="{{ section.id }}" data-section-type="nov-slick">
            <div class="nov-slick-carousel overflow_hidden" data-dots="false" data-nav="{{ sst.show_arrow }}" data-row="1" data-fade="true" data-speed="700">
              {% for block in section.blocks %}
                <div class="item position-relative nov-sh-image-2">
                  {% if block.settings.img_link != blank %}
                    <a href="{{ block.settings.img_link }}">
                  {% endif %}
                    {% if block.settings.img != blank %}
                      {%- render 'nov-aspect-image', image: block.settings.img -%}
                    {% else %}
                      {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                      {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  {% if block.settings.img_link != blank %}
                    </a>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="col-lg-9 col-md-8">
            {% comment %} product slider {% endcomment %}
            <div data-section-id="{{ section.id }}" data-section-type="nov-swiper">
              <div class="grid--view-items nov-swiper-carousel swiper {{ sst.type_slider }}"
                data-autoplay="false" 
                data-loop="false"
                data-row="{{ sst.row_number }}"
                data-row_mobile="{{ sst.row_mobile }}"
                data-items_xxl="{{ sst.xxl }}"
                data-items_xl="{{ sst.xl }}"
                data-items_lg="{{ sst.lg }}"
                data-items_md="{{ sst.md }}"
                data-items_sm="{{ sst.sm }}"
                data-items_xs="{{ sst.xs }}"
                data-spacing="{{ sst.spacing }}">
                <div class="swiper-wrapper">
                  {% for product in collection.products limit: product_limit %}
                    <div class="swiper-slide item">
                      {% render 'product-grid-item-style-1', product: product, section_id: section.id %}
                    </div>
                  {% else %}
                    {%- for i in (1..6) -%}
                      {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                      <div class="swiper-slide sp-item mb-30">
                        {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                      </div>
                    {%- endfor -%}
                  {% endfor %}
                </div>

                {% if sst.show_dots %}
                  <div class="d-flex align-items-center justify-content-center mt-60">
                    <div class="swiper-pagination"></div>
                  </div>
                {% endif %}
                
                {% if sst.show_pagination_progress %}
                  <div class="d-flex align-items-center mt-40">
                    {% if sst.show_pagination_progress %}
                      <div class="swiper-scrollbar position-static"></div>
                    {% endif %}
                  </div>
                {% endif %}

                {% if sst.show_nav %}
                  <div class="slider-nav d-none d-sm-flex align-items-center">
                    <div class="nav-arrow nav-prev pointer"></div>
                    <div class="nav-arrow nav-next pointer"></div>
                  </div>
                {% endif %}
              </div>
              {% if sst.viewall %}
                <div class="text-center mt-60">
                  <a href="{{ collection.url }}" class="btn btn-large">
                    <span>{{ 'sections.button.view_all_collection' | t }}</span>
                    <i class="zmdi zmdi-long-arrow-right"></i>
                  </a>
                </div>
              {% endif %}
            </div>
            {% comment %} end product slider {% endcomment %}
          </div>
        </div>
      {% else %}
        {% comment %} product slider {% endcomment %}
        <div data-section-id="{{ section.id }}" data-section-type="nov-swiper">
          <div class="grid--view-items nov-swiper-carousel swiper {{ sst.type_slider }}"
            data-autoplay="false" 
            data-loop="false"
            data-row="{{ sst.row_number }}"
            data-row_mobile="{{ sst.row_mobile }}"
            data-items_xxl="{{ sst.xxl }}"
            data-items_xl="{{ sst.xl }}"
            data-items_lg="{{ sst.lg }}"
            data-items_md="{{ sst.md }}"
            data-items_sm="{{ sst.sm }}"
            data-items_xs="{{ sst.xs }}"
            data-spacing="{{ sst.spacing }}">
            <div class="swiper-wrapper">
              {% for product in collection.products limit: product_limit %}
                <div class="swiper-slide item">
                  {% render 'product-grid-item-style-1', product: product, section_id: section.id %}
                </div>
              {% else %}
                {%- for i in (1..6) -%}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
