{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}

  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
      margin-bottom: {{ bst.distance_bottom_xs }}px;
    }
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text,
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a {
      color: {{ bst.t_c }};
      font-size: {{ bst.t_s_xxl | divided_by: 10.0 }}rem;
      line-height: {{ bst.t_lh }};
      letter-spacing: {{ bst.t_lt }}px;
      text-transform: {{ bst.t_tt }};
      max-width: {{ bst.t_m }}px;
    }
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a:hover {
      color:  {{ bst.c_link_h }};
    }
    {% if block.type == 'text' %}
      {% if bst.icon != blank %}
        #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text li:before {
          content:  url("{{ bst.icon | image_url: width: 15 }}");
        }
      {% endif %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text strong {
        color:  {{ bst.tb_c }};
      }
    {% endif %}
    {% if block.type == 'btn' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} .btn {
        color: {{ bst.c_btn }};
        background-color: {{ bst.b_btn }};
        border-color: {{ bst.bd_btn }};
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} .btn:hover {
        color: {{ bst.c_btn_h }} !important;
        background-color: {{ bst.b_btn_h }} !important;
        border-color: {{ bst.bd_btn_h }} !important;
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} .icon_play {
        color:  {{ bst.c_btn_video }};
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} .icon_play:hover {
        color:  {{ bst.c_btn_video_h }};
      }
    {% endif %}
  {% endfor %}
  @media(max-width: 1440px) {
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text,
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a {
        font-size: {{ block.settings.t_s_xl | divided_by: 10.0 }}rem;
      }
    {% endfor %}
  }
  @media(max-width: 1199px) {
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text,
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a {
        font-size: {{ block.settings.t_s_lg | divided_by: 10.0 }}rem;
      }
    {% endfor %}
  }
  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .block-image {
      background: {{ sst.gradient }};
    }
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text,
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a {
        font-size: {{ block.settings.t_s_md | divided_by: 10.0 }}rem;
      }
    {% endfor %}
  }
  @media(min-width: 768px) {
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
        margin-bottom: {{ block.settings.distance_bottom_md }}px;
      }
    {% endfor %}
  }
  @media(min-width: 992px) {
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
        margin-bottom: {{ block.settings.distance_bottom_lg }}px;
      }
    {% endfor %}
  }
  @media(min-width: 1200px) {
    {% for block in section.blocks %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
        margin-bottom: {{ block.settings.distance_bottom_xl }}px;
      }
    {% endfor %}
  }
{% endstyle %}

<div class="{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="block-section row justify-content-lg-center{% if sst.position_lg == 'left' %} flex-lg-row-reverse{% endif %}">
        <div class="col-lg-4 d-none d-xl-block"></div>
        <div class="col-xl-4 col-lg-6">
          <div class="block-image h-100 position-relative text-center pt-md-50 pb-md-50">
            {% if sst.image != blank %}
              <img data-src="{{ sst.image | image_url: width: 1024 }}" width="1024" height="{{ 1024 | divided_by: sst.image.aspect_ratio }}" class="lazyload" alt="{{ sst.image.alt }}" style="height: auto;">
            {% else %}
              {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        </div>
        <div class="block-text-content col-xl-4 col-lg-6 d-flex justify-content-center align-items-center align-items-center mt-md-50">
          <div class="block-text">
            {% for block in section.blocks %}
              {% assign bst = block.settings %}
              {% if block.type == 'text' %}
                <div class="nov-text {{ bst.t_fw }} block-{{ forloop.index }}{% if bst.ff == 'f_pr' %} f_pr{% endif %}{% if bst.icon != blank %} list-icon{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">{{ bst.text }}</div>
              {% endif %}
              {% if block.type == 'btn' %}
                <div class="block-btn block-{{ forloop.index }}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
                  {% if bst.btn != blank %}
                    <a href="{{ bst.btn_link }}" class="btn btn-{{ bst.btn_size }} box-shadow">
                      <span>{{ bst.btn }}</span>
                    </a>
                  {% endif %}
                  {% if bst.btn2 != blank %}
                    <a href="{{ bst.btn_link2 }}" class="btn btn-{{ bst.btn_size }} box-shadow">
                      <span>{{ bst.btn2 }}</span>
                    </a>
                  {% endif %}
                  {% if bst.video_url != blank %}
                    <div class="icon_play d-inline-flex align-items-center pointer" data-toggle="modal" data-target="#ModalVideo" data-src="{% if bst.video_url.type == "youtube"  %}https://www.youtube.com/embed/{{ bst.video_url.id }}?rel=0&showinfo=0&vq=720{% endif %}{% if bst.video_url.type == "vimeo" %}//player.vimeo.com/video/{{ bst.video_url.id }}?byline=0&portrait=0&badge=0{% endif %}">
                      <i class="zmdi zmdi-play-circle-outline"></i>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
