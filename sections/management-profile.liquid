      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Left Padding (Global)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Right Padding (Global)",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "profile",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Profile Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Full Name",
          "default": "Suhas M.S."
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Managing Director"
        },
        {
          "type": "richtext",
          "id": "bio",
          "label": "Biography",
          "default": "<p>A dynamic leader shaping the future of a century-old legacy.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Management Profile",
      "blocks": [
        { "type": "profile" },
        { "type": "profile" },
        { "type": "profile" }
      ]
    }
  ]
}
{% endschema %}