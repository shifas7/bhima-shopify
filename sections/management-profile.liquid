      "id": "image_size",
      "min": 150,
      "max": 450,
      "step": 10,
      "unit": "px",
      "label": "Desktop Circle Size",
      "default": 280
    },
    {
      "type": "range",
      "id": "image_size_mobile",
      "min": 100,
      "max": 300,
      "step": 10,
      "unit": "px",
