{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif

  assign collection = collections[sst.collection]
  assign product_limit = sst.limit
-%}
{% style %}
  {% render 'nov-section-style' %}

  {% if sst.show_pagination_progress %}
    #shopify-section-{{ section.id }} .swiper-scrollbar {
      background: {{ sst.pagination_progress_bg }} !important;
    }
    #shopify-section-{{ section.id }} .swiper-scrollbar-drag {
      background: {{ sst.progress_bg }} !important;
    }
  {% endif %}
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-swiper">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% if sst.show_nav %}
        <div class="d-flex align-items-center mb-40 position-relative">
          {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-0' %}
          <div class="slider-nav d-flex align-items-center">
            <div class="nav-arrow nav-prev pointer"></div>
            <div class="nav-arrow nav-next pointer"></div>
          </div>
        </div>
      {% else %}
        {% render 'heading-section', sub_position: sst.subheading_position %}
      {% endif %}
      <div class="list--view-items nov-swiper-carousel swiper"
        data-autoplay="false" 
        data-autoplayTimeout="6000"
        data-loop="false"
        data-row="{{ sst.row_number }}"
        data-row_mobile="{{ sst.row_number }}"
        data-items_xxl="3"
        data-items_xl="2"
        data-items_lg="2"
        data-items_md="2"
        data-items_sm="1"
        data-items_xs="1"
        data-spacing="{{ sst.spacing }}">
        <div class="swiper-wrapper">
          {% for product in collection.products limit: product_limit %}
            <div class="swiper-slide item">
              {% render 'product-list-item-style-1', product: product, section_id: section.id %}
            </div>
          {% else %}
          <div class="row">
            {%- for i in (1..4) -%}
              {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
              <div class="col-6 sp-item mb-30 d-flex align-items-center">
                <div class="w-35" style="margin-right: 20px">{{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}</div>
                <div>
                  <div class="title h4 mt-15">Lorem ipsum dolor</div>
                  <div class="price mt-10 font-700">19$</div>
                </div>
              </div>
            {%- endfor -%}
          </div>
          {% endfor %}
        </div>
        {% if sst.show_pagination_progress %}
          <div class="d-flex align-items-center mt-60">
            {% if sst.show_pagination_progress %}
              <div class="swiper-scrollbar position-static"></div>
            {% endif %}
          </div>
        {% endif %}
      </div>
      {% if sst.viewall %}
        <div class="text-center mt-40">
          <a href="{{ collection.url }}" class="btn {{ sst.btn_type }} {{ sst.btn_size }}">
            <span>{{ 'sections.button.view_all' | t }}</span>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
