{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .youtube {
    border-radius: {{ sst.radius }}px;
    overflow: hidden;
    transform: translateZ(0);
  }
  #shopify-section-{{ section.id }} .youtube::before {
    background: rgba(0, 0, 0, {{ sst.image_overlay_opacity }}%);
  }
  {%- if sst.img_cover != blank -%}
    #shopify-section-{{ section.id }} .bg-video__cover {
      top:  0;
      left: 0;
      background: url("{{ sst.img_cover | image_url: width: 2560 }}") center;
      background-size: cover;
    }
  {%- endif -%}

  {% if sst.enable_mh %}
    #shopify-section-{{ section.id }} video, #shopify-section-{{ section.id }} .img-cover {
      height: 100% !important;
    }
    #shopify-section-{{ section.id }} .item {
      height: {{ sst.mh }}px !important;
    }
    @media(min-width: 768px) {
      #shopify-section-{{ section.id }} .item {
        height: {{ sst.mh_md }}px !important;
      }
    }
    @media(min-width: 1200px) {
      #shopify-section-{{ section.id }} .item {
        height: {{ sst.mh_xl }}px !important;
      }
    }
    @media(min-width: 1441px) {
      #shopify-section-{{ section.id }} .item {
        height: {{ sst.mh_xxl }}px !important;
      }
    }
  {% endif %}

  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.text p {
      color: {{ bst.t_c }};
      font-size: {{ bst.t_s | divided_by: 10.0 }}rem;
      line-height: {{ bst.t_lh }};
      letter-spacing: {{ bst.t_lt }}px;
      text-transform: {{ bst.t_tt }};
      max-width: {{ bst.t_m }}px;
      margin-bottom: {{ bst.distance_bottom }}px;
      display: inline-block;
    }
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.text p {
        font-size: clamp(10px, {{ bst.t_s | divided_by: 10.0 | times: 0.8 }}rem, 2.8rem);
      }
    }
    {%- if block.type == 'btn' -%}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.btn {
        margin-bottom: {{ bst.distance_bottom }}px;
      }
    {%- endif -%}
  {% endfor %}
  #shopify-section-{{ section.id }} .block-text {
    --vertical: {{ sst.position_vertical_xs }}%;
    --horizotal: {{ sst.position_horizotal_xs }}%;
    --width: {{ sst.w_xs }}%;
  }
  @media(min-width: 576px) {
    #shopify-section-{{ section.id }} .block-text {
      --vertical: {{ sst.position_vertical_sm }}%;
      --horizotal: {{ sst.position_horizotal_sm }}%;
      --width: {{ sst.w_sm }}%;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .block-text {
      --vertical: {{ sst.position_vertical_md }}%;
      --horizotal: {{ sst.position_horizotal_md }}%;
      --width: {{ sst.w_md }}%;
    }
  }
  @media(min-width: 992px) {
    #shopify-section-{{ section.id }} .block-text {
      --vertical: {{ sst.position_vertical_lg }}%;
      --horizotal: {{ sst.position_horizotal_lg }}%;
      --width: {{ sst.w_lg }}%;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .block-text {
      --vertical: {{ sst.position_vertical_xl }}%;
      --horizotal: {{ sst.position_horizotal_xl }}%;
      --width: {{ sst.w_xl }}%;
    }
  }
  @media(min-width: 1441px) {
    #shopify-section-{{ section.id }} .block-text {
      --vertical: {{ sst.position_vertical_xxl }}%;
      --horizotal: {{ sst.position_horizotal_xxl }}%;
      --width: {{ sst.w_xxl }}%;
    }
  }
{% endstyle %}
<div class="{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      <div class="item youtube position-relative d-flex color-{{ sst.btn_play_color }}">
        {% if sst.video != blank %}
          {{ sst.video | video_tag: image_size: '1100x', autoplay: sst.autoplay, loop: true, controls: sst.controls, muted: sst.muted, data-id: section.id, data-alt: shop.name, style: "width: 100%;max-width: 100%;height: auto;object-fit: cover;" }}
          {% if sst.img_cover != blank %}
            <div class="bg-video__cover position-absolute w-100 h-100" data-id="{{ section.id }}"></div>
          {% endif %}
        {% endif %}
        {% if sst.img_cover != blank and sst.show_video_popup and sst.video == blank %}
          <img data-src="{{ sst.img_cover | image_url: width: 1920 }}" class="img-cover w-100" alt="{{ sst.img_cover.alt }}" width="{{ sst.img_cover.width }}" height="{{ sst.img_cover.height }}" style="object-fit: cover; height: auto;" loading="lazy">
        {% endif %}
        <div class="block-text position-absolute {{ sst.position }} text-{{ sst.text_align }}" data-id="{{ section.id }}">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            {% if block.type == 'text' %}
              <div class="{{ bst.t_ff }} {{ bst.t_fw }} block-{{ forloop.index }} text">{{ bst.text }}</div>
            {% endif %}
            {% if block.type == 'btn' %}
              <a href="{{ bst.btn_link }}" class="btn color-{{ bst.btn_color }} {{ bst.btn_type }} {{ bst.btn_size }} block-{{ forloop.index }}">
                <span>{{ bst.btn }}</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>

        {% if sst.video != blank or sst.show_video_popup %}
          <div class="block-icon__play d-flex justify-content-center position-absolute center-center">
            {% if sst.video != blank %}
              {% if sst.img_cover != blank or sst.autoplay == false %}
                <div class="btn-video__play" data-id="{{ section.id }}">
                  {% render 'icon-caret-right' %}
                </div>
              {% endif %}
            {% endif %}
            {% if sst.show_video_popup %}
              <div class="icon_play" data-toggle="modal" data-target="#ModalVideo" data-src="{% if sst.video_url.type == "youtube"  %}https://www.youtube.com/embed/{{ sst.video_url.id }}?rel=0&showinfo=0&vq=720{% endif %}{% if sst.video_url.type == "vimeo" %}//player.vimeo.com/video/{{ sst.video_url.id }}?byline=0&portrait=0&badge=0{% endif %}">
                {% render 'icon-caret-right' %}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if sst.video == blank and sst.show_video_popup == false %}
          {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
          <div class="block-text text-center position-absolute center-center">
            <div class="block-icon__play d-flex justify-content-center">
              <div class="btn-video__play" data-id="{{ section.id }}">
                {% render 'icon-caret-right' %}
              </div>
            </div>
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</div>
