{%- liquid 
  assign sst = section.settings

  if sst.ss_bg_enable
    assign bg = " bg"
  endif
  if sst.class_section != blank
    assign class_section = sst.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: sst.background_position | append: class_section
  if sst.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
  
-%}
{% style %}
  {% render 'nov-section-style' %}
  
  #shopify-section-{{ section.id }} .title-policy {
    font-size: {{ sst.text_fz | divided_by: 10.0 }}rem;
    color: {{ sst.text_color }};
  }
  #shopify-section-{{ section.id }} .desc-policy {
    font-size: {{ sst.desc_fz | divided_by: 10.0 }}rem;
    color: {{ sst.desc_color }};
  }
  #shopify-section-{{ section.id }} .policy-icon .respone_image {
    width: {{ sst.width_icon }}px;
  }
  #shopify-section-{{ section.id }} .policy__item--content {
    border-radius: {{ sst.bd_radius }}px;
    {% if sst.box_shadow %}
      box-shadow: 4px 4px 20px rgba(0,0,0,0.1);
    {% endif %}
    {%- if sst.pt > 40 -%}
      padding-top: {{ sst.pt | times: 0.5 | round: 0 }}px;
    {% else %}
      padding-top: {{ sst.pt | times: 0.8 | round: 0 }}px;
    {%- endif %}
    {%- if sst.pb > 40 -%}
      padding-bottom: {{ sst.pb | times: 0.5 | round: 0 }}px;
    {% else %}
      padding-bottom: {{ sst.pb | times: 0.8 | round: 0 }}px;
    {%- endif %}
  }
  {% if sst.show_bgitem %}
    #shopify-section-{{ section.id }} .policy__item--content {
      padding-left: clamp(10px, 13%, 65px);
      padding-right: clamp(10px, 13%, 65px);
      background: {{ sst.bg_itemcolor | default: '#fff' }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .row {
    margin: -{{ sst.spacing | divided_by: 2 }}px;
  }
  #shopify-section-{{ section.id }} .nov-policy-item,
  #shopify-section-{{ section.id }} .countdown-item {
    padding: {{ sst.spacing | divided_by: 2 }}px;
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .policy__item--content {
      {%- if sst.pt > 40 -%}
        padding-top: {{ sst.pt | times: 0.7 | round: 0 }}px;
      {%- endif %}
      {%- if sst.pb > 40 -%}
        padding-bottom: {{ sst.pb | times: 0.7 | round: 0 }}px;
      {%- endif %}
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .policy__item--content {
      padding-top: {{ sst.pt }}px;
      padding-bottom: {{ sst.pb }}px;
    }
  }
  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .title-policy {
      font-size: clamp(13px,{{ sst.text_fz | divided_by: 10.0 }}rem, 1.7rem);
    }
  }
  @media(max-width: 767px) {
    {% if sst.width_icon > 60 %}
      #shopify-section-{{ section.id }} .policy-icon img {
        max-width: {{ sst.width_icon | times: 0.8 | round: 0 }}px;
      }
    {% endif %}
  }
  @media(max-width:  575px) {
    #shopify-section-{{ section.id }} .title-policy {
      font-size: clamp(11px, {{ sst.text_fz | divided_by: 10.0 }}rem, 2.2rem);
    }
  }
  {% for block in section.blocks %}
    #shopify-section-{{ section.id }} .block-{{ forloop.index }} .desc-policy {
      max-width: {{ block.settings.mw }}px;
    }
  {% endfor %}
  #shopify-section-{{ section.id }} .block-countdown {
    border-radius: {{ sst.bd_radius }}px;
    {% if sst.countdown_bg_img != blank %}
      background: url("{{ sst.countdown_bg_img | image_url: width: 1920 }}");
      background-size: cover;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .countdownfree {
    color: {{ sst.countdown_color }};
  }
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      <div class="row">
        <div class="countdown-item col-lg-8">
          <div class="block-countdown h-100">
            {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-30' %}
            {% if sst.countdown_timeend != blank %}
              <div class="countdownfree d-inline-flex{% if sst.animate %} wow fadeInUp{% endif %}" data-countdown="{{ sst.countdown_timeend }}" data-show-days="{{ settings.show_day }}" data-restart="{{ settings.restart }}"></div>
            {% else %}
              <div class="countdownfree d-inline-flex{% if sst.animate %} wow fadeInRight{% endif %}">
                <div class="item-time"><span class="data-number">24</span><span class="name-time">Days</span></div>
                <div class="item-time"><span class="data-number">09</span><span class="name-time">Hours</span></div>
                <div class="item-time"><span class="data-number">28</span><span class="name-time">Mins</span></div>
                <div class="item-time"><span class="data-number">21</span><span class="name-time">Secs</span></div>
              </div>
            {% endif %}

            {% if sst.btn != blank %}
              <div class="mt-25 {{ sst.heading_alignment }}">
                <a href="{{ sst.btn_link }}" class="btn {{ sst.btn_size }} {{ sst.btn_type }} color-{{ sst.color_btn }}{% if sst.animate %} wow fadeInUp{% endif %}">
                  <span>{{ sst.btn }}</span>
                </a>
              </div>
            {% endif %}
          </div>
        </div>
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          <div class="nov-policy-item{% if sst.icon_animate %} icon_animate{% endif %} col-lg-4 col-sm-6">
            <div class="policy__item--content h-100 block-{{ forloop.index }}">
              {% if bst.policy_icon != blank %}
                <div class="policy-icon d-inline-flex align-items-center justify-content-center mb-15 position-relative">
                  {% render 'nov-aspect-image', image: bst.policy_icon %}
                </div>
              {% endif %}
              {% if bst.title != blank %}
                <div class="title-policy {{ sst.text_ff }} {{ sst.t_fw }}">{{ bst.title }}</div>
              {% endif %}
              {% if bst.desc_policy != blank %}
                <div class="desc-policy{% if bst.title != blank %} mt-15{% endif %}">{{ bst.desc_policy }}</div>
              {% endif %}
              {% if bst.link_label != blank %}
                <a href="{{ bst.link }}" class="link d-inline-flex align-items-center mt-20 mt-sm-10 font-500">
                  {{ bst.link_label }}
                  <i class="zmdi zmdi-long-arrow-right"></i>
                </a>
              {% endif %}
            </div>
          </div>  
        {% endfor %}
      </div>
    </div>
  </div>
</div>
