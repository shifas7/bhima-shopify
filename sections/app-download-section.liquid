  "settings": [
    {
      "type": "range",
      "id": "container_width",
      "min": 1000,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Section Width",
      "default": 1400
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Download the app"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description Text",
      "default": "<p>Start your savings today with our mobile app.</p>"
    },
    {
      "type": "header",
      "content": "Store Buttons"
    },
    {
      "type": "image_picker",
      "id": "google_play_img",
      "label": "Google Play Image"
    },
    {
      "type": "url",
      "id": "google_link",
      "label": "Google Play Link"
    },
    {
      "type": "image_picker",
      "id": "app_store_img",
      "label": "App Store Image"
    },
    {
      "type": "url",
      "id": "apple_link",
      "label": "App Store Link"
    },
    {
      "type": "header",
      "content": "Know More Button"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Know More"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btn_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_text",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Big App Promo Section"
    }
  ]
}
{% endschema %}