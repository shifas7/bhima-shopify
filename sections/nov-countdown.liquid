{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}
  
  #shopify-section-{{ section.id }} .countdownfree {
    --color-dot: {{ sst.cd_cd }};
  }
  #shopify-section-{{ section.id }} .data-number {
    color: {{ sst.c_cd }};
    background-color: {{ sst.bg_cd }};
    border: 1px solid {{ sst.bd_cd }};
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .name-time {
    color: {{ sst.ct_cd }};
  }
{% endstyle %}

<div class="container-outer{{ bg_class_full }}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">

      {% if sst.banner != blank %}
        <div class="row align-items-center justify-content-center">
          <div class="block-left col-lg-6 d-flex align-items-center justify-content-center">
            <div class="block-left-content">
      {% endif %}

              {% render 'heading-section', sub_position: sst.subheading_position, class: 'text-center' %}
              {% if sst.countdown_timeend != blank %}
                <div class="countdownfree d-flex justify-content-center{% if sst.show_shadow %} shadow{% endif %}" data-countdown="{{ sst.countdown_timeend }}" data-show-days="{{ settings.show_day }}" data-restart="{{ settings.restart }}"></div>
              {% else %}
                <div class="countdownfree d-flex justify-content-center{% if sst.show_shadow %} shadow{% endif %}">
                  <div class="item-time"><span class="data-number">24</span><span class="name-time">Days</span></div>
                  <div class="item-time"><span class="data-number">09</span><span class="name-time">Hours</span></div>
                  <div class="item-time"><span class="data-number">28</span><span class="name-time">Mins</span></div>
                  <div class="item-time"><span class="data-number">21</span><span class="name-time">Secs</span></div>
                </div>
              {% endif %}
              {% if sst.btn != blank %}
                <div class="mt-30 text-center">
                  <a href="{{ sst.btn_link }}" class="btn btn-medium color-{{ sst.color_section }}" aria-label="{{ sst.btn }}">
                    <span>{{ sst.btn }}</span>
                    <i class="zmdi zmdi-long-arrow-right"></i>
                  </a>
                </div>
              {% endif %}

      {% if sst.banner != blank %}        
            </div>
          </div>
        <div class="block-right col-lg-6{% if sst.animate %} wow fadeInRight{% endif %}">
          {% render 'nov-aspect-image', image: sst.banner %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>

