{%- assign sst = section.settings -%}
<style>
  {% if sst.boxInfor == true %}
    @media (min-width: 768px) {
      .page-contact-us .formContactUs {
        margin-right: 80px;
      }
      .lang-rtl .page-contact-us .formContactUs {
        margin-left: 80px;
        margin-right: initial;
      }
    }
  {% endif %}
</style>
{% render 'nov-breadcrumb', class_br: 'breadcrumb_inner' %}
{% if sst.has_fullwidth == false %}
  <div class="container">
{% endif %}
  {% if page.content.size > 0 %}
    <div class="rte">
      {{ page.content }}
    </div>
  {% endif %}

  {% if sst.map == true %}
    <div class="map-section__container mb-100 mb-sm-50">
      <iframe src="{{ sst.iframe_map }}" width="100%" height="100%" frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
  {% endif %}
  <div class="boxItem wow">
    <div class="form_title {{ sst.title_alignment }}">
      {% if sst.title_form != blank %}
        <div class="title font-800 text-uppercase">{{ sst.title_form }}</div>
      {% endif %}
      {% if sst.sub_form != blank %}
        <div class="sub_title">{{ sst.sub_form }}</div>
      {% endif %}
    </div>
    <div class="row">
      {% if sst.form %}
        <div class="{% if sst.boxInfor %}col-lg-8{% else %}col-12{% endif %} mb-md-80">
          <div class="formContactUs">
            <div class="contact-form form-vertical">
              {% form 'contact', id: 'page_contact' %}
              
                {% if form.posted_successfully? %}
                <p class="note form-success">
                  {{ 'page.contact.form.post_success' | t }}
                </p>
                {% endif %}
                
                {{ form.errors | default_errors }}
                
                <div class="form-group row spacing-10 mb-10">
                  <div class="col-md-6 mb-md-10">
                    <input type="text" id="ContactFormName" name="contact[name]" value="{% if form.fields.name %}{{ form.fields.name }}{% elsif customer %}{{ customer.name }}{% endif %}" class="mb-0 {% if form.errors contains 'name' %}input--error{% endif %}" placeholder="{{ 'page.contact.form.name' | t }}" required>
                  </div>
                  <div class="col-md-6">
                    <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="mb-0 {% if form.errors contains 'email' %}input--error{% endif %}" placeholder="{{ 'page.contact.form.email' | t }}" required>
                  </div>
                </div>
                
                <div class="form-group row mb-10">
                  <div class="col-md-12">
                    <input type="tel" id="ContactFormPhone" name="contact[phone]" pattern="[0-9\-]*" value="{% if form.fields.phone %}{{ form.fields.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" class="mb-0 {% if form.errors contains 'phone' %}input--error{% endif %}" placeholder="{{ 'page.contact.form.phone' | t }}">
                  </div>
                </div>
                
                <div class="form-group row mb-20">
                  <div class="col-md-12">
                    <textarea rows="12" cols="50" id="ContactFormMessage" class="mb-0" name="contact[body]" placeholder="{{ 'page.contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                  </div>
                </div>
                
                <button class="btn btn-large" type="submit">
                  <span>{{ 'page.contact.form.submit' | t }}</span>
                </button>
              {% endform %}
            </div>
          </div>
        </div>
      {% endif %}
      {% if sst.boxInfor == true %}
        <div class="{% if sst.form == true %}col-lg-4{% else %}col-12{% endif %} mt-sm-50">
          <div class="boxInfor">
            {% if sst.address != blank %}
              <div class="address mb-25"><label>{{ 'page.contact.address' | t }}</label> {{ sst.address }}</div>
            {% endif %}
            {% if sst.email != blank %}
              <div class="email mb-5"><label>{{ 'page.contact.email' | t }}</label> {{ sst.email }}</div>
            {% endif %}
            {% if sst.call != blank %}
              <div class="call mb-20"><label>{{ 'page.contact.call' | t }}</label> {{ sst.call }}</div>
            {% endif %}
            {% if sst.time != true %}
              <div class="time mb-35"><label>{{ 'page.contact.time' | t }}</label> {{ sst.time }}</div>
            {% endif %}
            {% if sst.social == true %}
              {% render 'nov-social' %}
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% if sst.has_fullwidth == false %}
  </div>
{% endif %}

