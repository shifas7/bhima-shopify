{%- liquid
  assign sst = section.settings
  assign limit = sst.limit

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if sst.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}
{% style %}
  {% render 'nov-section-style' %}
  
  {%- if sst.nav_style == 'style1' -%}
    #shopify-section-{{ section.id }} .nav-tabs .nav-link:after {
      background-color: {{ sst.nav_ca }};
    }
    #shopify-section-{{ section.id }} .nav-link {
      color: {{ sst.nav_c }};
      background-color: {{ sst.nav_bg }};
      border-color: {{ sst.nav_bd }};
    }
    #shopify-section-{{ section.id }} .nav-link:hover, #shopify-section-{{ section.id }} .nav-link.active {
        color: {{ sst.nav_ca }};
        background-color: {{ sst.nav_bga }};
    }
  {%- endif -%}
  {%- if sst.nav_style == 'style2' -%}
    #shopify-section-{{ section.id }} .nav-tabs {
      background-color: {{ sst.nav_bg }};
    }
    #shopify-section-{{ section.id }} .nav-link {
      color: {{ sst.nav_c }};
    }
    #shopify-section-{{ section.id }} .nav-link.active {
      color: {{ sst.nav_ca }};
    }
    #shopify-section-{{ section.id }} .nav-mobile__title {
      background-color: {{ sst.nav_bga }};
    } 
  {%- endif -%}
  #shopify-section-{{ section.id }} .pagination__count {
    color: {{ sst.c_pagination }};
  }
  #shopify-section-{{ section.id }} .pagination__bar {
    background-color: {{ sst.bg_pagination }};
  }
  #shopify-section-{{ section.id }} .progress {
    background-color: {{ sst.bg_progress }};
  }
  #shopify-section-{{ section.id }} .item-product {
    margin-bottom: {{ sst.spacing }}px;
  }
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">

      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="d-flex justify-content-center mb-60 {{ sst.nav_style }}">
        <ul class="nav nav-tabs list-unstyled d-none d-sm-flex position-relative">
          {% for block in section.blocks %}
            <li class="nav-item position-relative mb-0">
              <a href="#" class="nav-link tab-links text-center position-relative{% if forloop.first %} active{% endif %}"
              data-target="#collection{{ forloop.index }}{{ section.id }}"
              data-toggle="tab">
                <span>{{ block.settings.tab_title }}</span>
              </a>
            </li>
          {% endfor %}
        </ul>
        <div class="nav-mobile dropdown d-md-none mb-20">
          <div class="dropdown-toggle nav-mobile__title d-flex align-items-center w-100 font-700" data-toggle="dropdown" aria-expanded="false">
          </div>
          <div class="dropdown-menu nav dropdown-menu-right w-100 p-0">
            {% for block in section.blocks %}
              <div class="nav-link tab-links{% if forloop.first %} active{% endif %}" data-target="#collection{{ forloop.index }}{{ section.id }}" data-toggle="tab">{{ block.settings.tab_title }}</div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="collection-tabs-content position-relative">
        {% for block in section.blocks %}
          {%- assign bst = block.settings -%}
          {%- assign collection = collections[bst.collection_handle] -%}
          <div class="tab-content{% if forloop.first %} active{% endif %}" id="collection{{ forloop.index }}{{ section.id }}">
            {% paginate collection.products by limit %}
              <div class="row spacing-{{ sst.spacing }} grid--view-items product__loadmore-{{ forloop.index }}{{ section.id }}"
                data-xxl="{{ sst.xxl }}"
                data-xl="{{ sst.xl }}"
                data-lg="{{ sst.lg }}"
                data-md="{{ sst.md }}"
                data-sm="{{ sst.sm }}"
                data-xs="{{ sst.xs }}">
                {% for product in collection.products %}
                  <div class="item {% render 'number-to-col' %}">
                    {% render 'product-grid-item-style-1', product: product, section_id: block.id %}
                  </div>
                {% else %}
                  {%- for i in (1..8) -%}
                    {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                    <div class="item {% render 'number-to-col' %} mb-30">
                      {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                    </div>
                  {%- endfor -%}
                  <div class="text-center col-12">
                    <div class="btn btn-large btn_loadmore d-inline-flex align-items-center justify-content-center">
                      <span>{{ 'sections.collection_loadmore.load_more_items' | t }}</span>
                      <div class="load"></div>
                    </div>
                  </div>
                {% endfor %}
              </div>
              {% if paginate.next %}
                <div class="product-loadmore__bottom text-center mt-30">
                  <div class="pagination__count pagination__count{{ forloop.index }}{{ section.id }} mb-20">
                    {{ 'collections.general.product_count_html' | t: count: collection.products.size, total: collection.products_count }}
                  </div>
                  <div class="pagination__bar pagination__bar{{ forloop.index }}{{ section.id }} position-relative mb-30" data-max="{{ collection.products_count }}">
                    <span class="progress position-absolute" style="width: {{ collection.products.size | times: 100 | divided_by: collection.products_count }}%"></span>
                  </div>
                  <div class="btn btn-large btn_loadmore d-inline-flex align-items-center justify-content-center {{ forloop.index }}{{ section.id }}" btn-handle="{{ forloop.index }}{{ section.id }}" link="{{ paginate.next.url }}">
                    <span>{{ 'sections.collection_loadmore.load_more_items' | t }}</span>
                    <div class="load"></div>
                  </div>
                </div>
              {% endif %}
            {% endpaginate %}
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</div>

