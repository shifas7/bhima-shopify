{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .chairman-profile__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .chairman-profile__grid {
      grid-template-columns: 1fr 2fr;
      gap: 50px;
    }
    .chairman-profile__grid--reverse {
      direction: rtl;
    }
    .chairman-profile__grid--reverse .chairman-profile__text-wrapper {
      direction: ltr;
    }
  }

  .chairman-profile__image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    display: block;
  }

  .chairman-profile__heading {
    margin-bottom: 30px;
    text-align: {{ section.settings.heading_alignment }};
  }

  .chairman-profile__designation {
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 5px;
    color: rgba(var(--color-foreground), 0.7);
  }

  .chairman-profile__desc {
    font-style: italic;
    margin-bottom: 20px;
  }

  .chairman-profile__content {
    line-height: 1.6;
  }
{%- endstyle -%}

<div class="chairman-profile section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="chairman-profile__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading | escape }}
      </h2>
    {%- endif -%}

    <div class="chairman-profile__grid {% if section.settings.layout == 'right' %}chairman-profile__grid--reverse{% endif %}">
      <div class="chairman-profile__image">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.image.alt }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>

      <div class="chairman-profile__text-wrapper">
        <div class="chairman-profile__info">
          <p class="chairman-profile__designation">{{ section.settings.designation }}</p>
          <p class="chairman-profile__desc">{{ section.settings.description }}</p>
        </div>
        <div class="chairman-profile__content rte">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Chairman Profile",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Meet Our Chairman"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left",
      "label": "Heading Alignment"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Chairman Photo"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        { "value": "left", "label": "Image Left" },
        { "value": "right", "label": "Image Right" }
      ],
      "default": "left",
      "label": "Desktop Image Placement"
    },
    {
      "type": "text",
      "id": "designation",
      "label": "Designation",
      "default": "Chairman & Founder"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Short Bio/Line",
      "default": "Leading with vision since 1995."
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Main Content/Message",
      "default": "<p>Add a formal message or professional background here.</p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Chairman Profile"
    }
  ]
}
{% endschema %}