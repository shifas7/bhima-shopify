{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}
{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .collec-img__item {
    border-radius: {{ sst.border_radius }}px;
    padding: {{ sst.padding }}px;
    {% if sst.show_border -%}
      border: 1px {{ sst.style_border }} {{ sst.c_border }};
    {%- endif %}
    {% if sst.show_bg_item %}
      background-color: {{ sst.bg_img }};
    {% endif %}
  }
  {% if sst.enable_img_width %}
    #shopify-section-{{ section.id }} .block-image {
      max-width: {{ sst.img_width }}px !important;
      min-width: {{ sst.img_width }}px !important;
      border-radius: {{ sst.img_corner_radius }}px;
      transform: translateZ(0);
    }
  {% endif %}
  {% if sst.enable_img_height %}
    #shopify-section-{{ section.id }} .respone_image {
      padding-top: {{ sst.img_height }}px !important;
    }
  {% endif %}
  {% if sst.enable_img_width or sst.enable_img_height %}
    #shopify-section-{{ section.id }} .respone_image img {
      object-fit: contain;
    }
  {% endif %}
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}{% if sst.animate %} wow fadeInUp{% endif %}">
      {% render 'heading-section' %}
      <div class="nov-slick-carousel row slider-shadow spacing-{{ sst.spacing }}{% if sst.spacing > 20 %} spacing-sm-10{% endif %}{% if sst.show_border %} show-border{% endif %}{% if sst.show_box_shadow %} show-box-shadow{% endif %} {{ sst.dots_color }} {{ sst.arrow_color }}"
        data-loop="false"
        data-dots="{{ sst.show_dots }}"
        data-nav="{{ sst.show_nav }}"
        data-row="{{ sst.row_number }}"
        data-items_xxl="{{ sst.xxl }}"
        data-items_xl="{{ sst.xl }}"
        data-items_lg="{{ sst.lg }}"
        data-items_md="{{ sst.md }}"
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        {% if sst.one_slider %}data-oneslider="1"{% endif %}>
        {% for block in section.blocks %}
        {% assign bst = block.settings %}
        <div class="block sp-item {% render 'number-to-col' %}{% if sst.row_number > 1 %} mb-{{ sst.spacing }}{% if sst.spacing > 20 %} spacing-sm-10{% endif %}{% endif %}">
          <div class="collec-img__item d-flex align-items-center justify-content-between{% if sst.show_bg_item %} show_bg{% endif %}">
            <div class="collec-img__content">
              {% if bst.heading != blank %}
                <div class="collec-img__heading">
                  <a href="{{ bst.link }}" class="{{ sst.fz }} {{ sst.fw }}">{{ bst.heading }}</a>
                </div>
              {% endif %}
              {% if bst.subheading != blank %}
                <div class="collec-img__text mt-5">{{ bst.subheading }}</div>
              {% endif %}
            </div>
            <div class="block-image overflow_hidden">
              <a href="{{ bst.link }}" class="d-block{% if sst.enable_img_height %} h-100{% endif %}">
                {% if bst.image != blank %}
                  {% render 'nov-aspect-image', image: bst.image %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>

    </div>
  </div><!-- End container -->
</div>

