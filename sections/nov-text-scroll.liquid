{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .block-scroll {
    animation-duration: {{ sst.time }}s;
    --spacing: {{ sst.spacing | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} .block-scroll__item {
    color: var(--color-title);
    font-size: {{ sst.t_s | divided_by: 10.0 }}rem;
    line-height: {{ sst.t_lh }};
    letter-spacing: {{ sst.t_lt }}px;
    text-transform: {{ sst.t_tt }};
  }
  #shopify-section-{{ section.id }} .block-scroll__item i {
    font-size: {{ sst.font_size_icon }}px;
  }
  .block-scroll__item {
  padding: 2px 2px !important; /* reduce inside space */
  line-height: 0.5 !important; /* tighten text vertically */
}

  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .block-scroll__item {
      font-size: {{ sst.t_s_md | divided_by: 5.0 }}rem;
    }
  }
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% if section.blocks.size > 0 %}
        <div class="nov-text-scroll overflow_hidden d-flex {{ sst.ff }}{% if sst.show_dot %} show-dots{% endif %}">
          <div class="block-scroll d-flex">
            {% for block in section.blocks %}
              {% assign bst = block.settings %}
              <div class="block-scroll__item {{ sst.t_fw }} d-flex align-items-center justify-content-center">
                {% if bst.image != blank %}
                  {% render 'nov-aspect-image', image: bst.image %}
                {% else %}
                  {% if bst.icon != blank %}
                    <i class="{{ bst.icon }}"></i>
                  {% endif %}
                {% endif %}
                {{ bst.title }}
              </div>
            {% endfor %}
          </div>
          <div class="block-scroll d-flex">
            {% for block in section.blocks %}
              {% assign bst = block.settings %}
              <div class="block-scroll__item {{ sst.t_fw }} d-flex align-items-center justify-content-center">
                {% if bst.image != blank %}
                  {% render 'nov-aspect-image', image: bst.image %}
                {% else %}
                  {% if bst.icon != blank %}
                    <i class="{{ bst.icon }}"></i>
                  {% endif %}
                {% endif %}
                {{ bst.title }}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
