{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}
  {% if sst.video_title != blank %}
    #shopify-section-{{ section.id }} .video-title {
      color: {{ sst.video_title_color }};
    }
  {% endif %}
  {% if sst.video_desc != blank %}
    #shopify-section-{{ section.id }} .video-desc {
      color: {{ sst.video_desc_color }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .item-video-slider {
    border-radius: {{ sst.corner_img }}px;
    transform: translateZ(0);
  }
{% endstyle %}
<div class="container-outer{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-swiper">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="nov-swiper-carousel swiper"
        data-autoplay="false" 
        data-autoplayTimeout="6000"
        data-loop="false"
        data-row="1"
        data-row_mobile="1"
        data-items_xxl="{{ sst.xxl }}"
        data-items_xl="{{ sst.xl }}"
        data-items_lg="{{ sst.lg }}"
        data-items_md="{{ sst.md }}"
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-spacing="30">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide sp-item">
              <div class="item-video-slider overflow_hidden position-relative nov-sh-image-2">
                {% if block.settings.image != blank %}
                  {% render 'nov-aspect-image', image: block.settings.image %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                    {{ 'collection-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
                {% endif %}
                <div class="icon_play color-{{ sst.color_btn }} position-absolute center-center" data-toggle="modal" data-target="#ModalVideo" data-src="{% if block.settings.video_url.type == "youtube"  %}https://www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0&vq=720{% endif %}{% if block.settings.video_url.type == "vimeo" %}//player.vimeo.com/video/{{ block.settings.video_url.id }}?byline=0&portrait=0&badge=0{% endif %}">
                  {% render 'icon-caret-right-outline' %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
