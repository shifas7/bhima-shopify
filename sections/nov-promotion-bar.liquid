 {% assign sst = section.settings %}
{% style %}
	#shopify-section-{{ section.id }} .distance {
	  padding-top: {{ sst.distance_top }}px;
	  padding-bottom: {{ sst.distance_bottom }}px;
		{% if sst.background_color != blank %}
		  background-color: rgba({{ sst.background_color | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, {{ sst.bg_opacity }}%);
		{% endif %}
		{% if sst.bd_b %}border-bottom:  1px solid {{ sst.bd_bc }};{% endif %}
	}
	{% if sst.show_nav %}
		#shopify-section-{{ section.id }} .nov-slick-carousel .slick-arrow {
		  --slider-arrow-color: {{ sst.c_nav }};
      --slider-arrow-color-act: {{ sst.c_nav_act }};
		}
	{% endif %}
	#shopify-section-{{ section.id }} .text {
		color: {{ sst.t_c }};
		font-size: {{ sst.t_s | divided_by: 10.0 | append: 'rem' }};
		line-height: {{ sst.t_lh }};
		letter-spacing: {{ sst.t_lt | append: 'px' }};
		text-transform: {{ sst.t_tt }};
	}
  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .text {
      font-size: {{ sst.t_s_md | divided_by: 10.0 | append: 'rem' }};
    }
  }
	#shopify-section-{{ section.id }} .block-scroll__item i {
		color:  {{ sst.icon_c }};
	}
	#shopify-section-{{ section.id }} .item-time {
		background-color: {{ sst.cd_bg }};
		color: {{ sst.cd_c }};
	}
	#shopify-section-{{ section.id }} .countdownfree .item-time:not(:last-child):after {
		color: {{ sst.t_c }};
	}
	#shopify-section-{{ section.id }} .nov-text-scroll .block-scroll__item .item-content:after {
		background-color: {{ sst.dot_c }};
	}
	{% if sst.type == 'scroll' %}
		#shopify-section-{{ section.id }} .block-scroll {
		  animation-duration: {{ sst.time | append:  's' }};
		}
	{% endif %}
	{% if sst.show_close %}
		#shopify-section-{{ section.id }} .promotion-close {
			color:  {{ sst.close_c }};
		}
	{% endif %}
  {% if sst.show_social %}
    #shopify-section-{{ section.id }} .block_social a {
      --color-link: {{ sst.social_color }};
      --color-hover: {{ sst.social_color_hover }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .nov_ud_group .nov_ud_btn {
    --color-title: {{ sst.multi_color }};
    --color-hover: {{ sst.multi_color_hover }};
  }
  {% if section.blocks.size == 0 %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .distance {
        display: none;
      }
    }
  {% endif %}
{% endstyle %}
<div class="distance act position-relative{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick" promationBar>
  <div class="{{ sst.container }}">
    <div class="row align-items-center">
      <div class="col-md-3 d-none d-md-block">
        {% if sst.show_social %}
          {% render 'nov-social' %}
        {% endif %}
      </div>
      <div class="{% unless sst.show_social and sst.show_language_currency %}col-12{% else %}col-md-6{% endunless %}">
        {% if sst.type == 'scroll' %}
          <div class="nov-text-scroll overflow_hidden d-flex">
            <div class="block-scroll d-flex align-items-center">
              {% for block in section.blocks %}
                {% assign bst = block.settings %}
                <div class="block-scroll__item">  
                  <div class="item-content d-flex align-items-center justify-content-center">
                    {% if block.type == 'text' %}
                      {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                      <div class="text {{ sst.t_fw }}">{{ bst.title }}</div>
                    {% endif %}

                    {% if block.type == 'countdown' %}
                      {% if bst.title != blank %}<div class="text {{ sst.t_fw }}">{{ bst.title }}</div>{% endif %}
                      <div class="countdownfree d-flex justify-content-center" data-countdown="{{ bst.countdown_timeend }}" data-show-days={{ settings.show_day }} data-restart="{{ settings.restart }}"></div>
                      {% if bst.link_t != blank %} <a href="{{ bst.link }}" class="text {{ sst.t_fw }}">{{ bst.link_t }}</a>{% endif %}
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="block-scroll d-flex align-items-center">
              {% for block in section.blocks %}
                {% assign bst = block.settings %}
                <div class="block-scroll__item">
                  <div class="item-content d-flex align-items-center justify-content-center">
                    {% if block.type == 'text' %}
                      {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                      <div class="text {{ sst.t_fw }}">{{ bst.title }}</div>
                    {% endif %}

                    {% if block.type == 'countdown' %}
                      {% if bst.title != blank %}<div class="text {{ sst.t_fw }}">{{ bst.title }}</div>{% endif %}
                      <div class="countdownfree d-flex justify-content-center" data-countdown="{{ bst.countdown_timeend }}" data-show-days={{ settings.show_day }} data-restart="{{ settings.restart }}"></div>
                      {% if bst.link_t != blank %} <a href="{{ bst.link }}" class="text {{ sst.t_fw }}">{{ bst.link_t }}</a>{% endif %}
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% else %}
          <div class="nov-slick-carousel justify-content-center spacing-10"
            data-autoplay="{{ sst.auto }}"
            data-autoplaytimeout="{{ sst.timeauto }}000"
            data-speed="700"
            data-loop="true" 
            data-dots="false"
            data-nav="{{ sst.show_nav }}"
            data-items_xxl="1"
            data-row="1">
            {% for block in section.blocks %}
              {% assign bst = block.settings %}
              <div class="item sp-item block-scroll__item">
                <div class="item-content d-flex align-items-center justify-content-center">
                  {% if block.type == 'text' %}
                    {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                    <div class="text {{ sst.t_fw }} {{ sst.t_ff }}">{{ bst.title }}</div>
                  {% endif %}
                  {% if block.type == 'countdown' %}
                    {% if bst.title != blank %}<div class="text {{ sst.t_fw }}">{{ bst.title }}</div>{% endif %}
                    <div class="countdownfree d-flex justify-content-center" data-countdown="{{ bst.countdown_timeend }}" data-show-days={{ settings.show_day }} data-restart="{{ settings.restart }}"></div>
                    {% if bst.link_t != blank %} <a href="{{ bst.link }}" class="text {{ sst.t_fw }}">{{ bst.link_t }}</a>{% endif %}
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <div class="col-md-3 d-none d-md-block">
        {% if sst.show_language_currency %}
          {% if settings.show_multiple_currencies or settings.show_language and localization.available_languages.size > 1 %}
            <div class="nov-lang-cur nov_ud_toggle d-none justify-content-end {% if section.blocks.size > 0 %}d-lg-flex{% else %}d-md-flex{% endif %}" data-ud_collapse="true">
              {% if settings.show_multiple_currencies %}
                <div class="block-currency nov_ud_group">
                  {% render 'nov-block-currency' %}
                </div>
              {% endif %}
              {%- if settings.show_language and localization.available_languages.size > 1 -%}
                <div class="block-language nov_ud_group">
                  {% render 'nov-block-language' id: 'PromotionLanguage' %}
                </div>
              {%- endif -%}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
    {% if sst.show_close %}
    	<div class="promotion-close position-absolute hover:c_df pointer">
    		<i class="zmdi zmdi-close"></i>
    	</div>
    {% endif %}
  </div>
</div>
