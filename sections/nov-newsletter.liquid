{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}

{% endstyle %}

<div class="color-{{ sst.color_section }}{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      <div class="row align-items-center spacing-50">
        <div class="col-lg-5 mb-md-40">
          {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-0' %}
        </div>
        <div class="col-lg-7 d-sm-flex align-items-center">
          {% form 'customer', id: section.id %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
            <div class="input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email"
              name="contact[email]"
              class="form-control"
              value="{% if customer %}{{ customer.email }}{% endif %}"
              placeholder="{{ 'general.newsletter_form.email_newsletter' | t }}"
              required
              >
              <button type="submit" class="newsletter__submit btn {{ sst.btn_type }} text-capitalize position-absolute" name="commit" title="{{ 'general.newsletter_form.submit' | t }}">
                <span>{{ 'general.newsletter_form.subscribe' | t }}</span>
              </button>
            </div>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
