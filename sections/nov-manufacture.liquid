{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif

 if settings.lang_iso_rtl != blank
  assign list_iso_rtl = settings.lang_iso_rtl | downcase
  if list_iso_rtl contains request.locale.iso_code
    assign iso_rtl = true
  else
    assign iso_rtl = false
  endif
 endif
-%}
{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .image {
    max-width: {{ sst.width_icon }}px;
    max-height: {{ sst.height_icon }}px;
  }
  #shopify-section-{{ section.id }} .manufacture__item {
    background: {{ sst.bg_item }};
    border-color: {{ sst.border_color }};
    border-radius: {{ sst.corner_radius }}px;
    padding: {{ sst.paddingY }}px {{ sst.paddingX }}px;
  }
  #shopify-section-{{ section.id }} .nov-grid-type {
    margin-top: {{ sst.spacing | divided_by: 2 | times: -1 }}px;
    margin-bottom: {{ sst.spacing | divided_by: 2 | times: -1 }}px;
  }
  #shopify-section-{{ section.id }} .nov-grid-type .sp-item {
    padding-top: {{ sst.spacing | divided_by: 2 }}px;
    padding-bottom: {{ sst.spacing | divided_by: 2 }}px;
  }
  {% if sst.type == 'scroll' %}
    #shopify-section-{{ section.id }} .nov-scroll-slider {
      animation-duration: {{ sst.time_scroll }}s;
    }
    #shopify-section-{{ section.id }} .nov-ins-slider:first-child {
      {% if settings.enable_rtl and iso_rtl %}margin-left{% else %}margin-right{% endif %}: {{ sst.spacing | divided_by: 2 }}px;
    }
    #shopify-section-{{ section.id }} .sp-item {
      width: {{ 100 | divided_by: sst.xs | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.xs | append: 'vw' }};
    }
    @media(min-width:  576px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.sm | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.sm | append: 'vw' }};
      }
    }
    @media(min-width:  768px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.md | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.md | append: 'vw' }};
      }
    }
    @media(min-width:  992px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.lg | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.lg | append: 'vw' }};
      }
    }
    @media(min-width:  1200px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.xl | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.xl | append: 'vw' }};
      }
    }
    @media(min-width:  1441px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.xxl | append: 'vw' }};
        flex: 0 0 {{  100 | divided_by: sst.xxl | append: 'vw' }};
      }
    }
  {% endif %}
{% endstyle %}
<div class="container-outer{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}"  data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
        <div class="{% if sst.type == 'slider' %}nov-slick-carousel row spacing-{{ sst.spacing }}{% elsif sst.type == 'grid' %}nov-grid-type row spacing-{{ sst.spacing }}justify-content-center{% else %}nov-scroll-type d-flex flex-nowrap{% endif %}"
          {% if sst.type == 'slider' %}
            data-autoplay="{{ sst.auto }}" 
            data-autoplayTimeout="{{ sst.time }}000"
            data-loop="true"
            data-dots="false"
            data-nav="false"
            data-row="1"
            data-row_mobile="1"
            data-items_xxl="{{ sst.xxl }}"
            data-items_xl="{{ sst.xl }}"
            data-items_lg="{{ sst.lg }}"
            data-items_md="{{ sst.md }}"
            data-items_sm="{{ sst.sm }}"
            data-items_xs="{{ sst.xs }}"
            {% if sst.one_slider %}data-oneslider="1"{% endif %}
          {% endif %}
        >
      
        {% for block in section.blocks %}
          <div class="sp-item{% unless sst.type == 'scroll' %} {%- render 'number-to-col' -%}{% endunless %}">
            <div class="manufacture__item overflow_hidden text-center d-flex align-items-center justify-content-center{% if sst.box_shadow %} box-shadow{% endif %}">
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="manufacture__link d-inline-block">
              {% endif %}
              {% if block.settings.image != blank %}
                <div class="image d-flex">
                  <img src="{{ block.settings.image | image_url: width: 1 }}" data-src="{{ block.settings.image | image_url: width: 500 }}" class="d-inline-block lazyload img-fluid" alt="{{ block.settings.image.alt }}" width="500" height="{{ 500 | divided_by: block.settings.image.aspect_ratio }}" style="height: auto;">
                </div>
              {% else %}
                {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>
