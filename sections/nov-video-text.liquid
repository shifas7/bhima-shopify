{%- liquid 
  assign sst = section.settings

  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if section.settings.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}

{% style %}
  {% render 'nov-section-style' %}

  {% if sst.bg_text != blank %}
    #shopify-section-{{ section.id }} .block_text {
      background-color: {{ sst.bg_text }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .nov-sh-image-2 {
    border-radius: {{ sst.corner_radius }}px;
  }
  {%- if sst.img_cover != blank -%}
    #shopify-section-{{ section.id }} .bg-video__cover.lazyloaded {
      top: 0;
      left: 0;
      background: url("{{ sst.img_cover | image_url: width: 1920 }}") center;
      background-size: cover;
    }
  {%- endif -%}

  {% if sst.enable_mh %}
    #shopify-section-{{ section.id }} video, #shopify-section-{{ section.id }} .img-cover {
      height: 100% !important;
    }
    #shopify-section-{{ section.id }} .block-video-content {
      height: {{ sst.mh }}px !important;
    }
    @media(min-width: 768px) {
      #shopify-section-{{ section.id }} .block-video-content {
        height: {{ sst.mh_md }}px !important;
      }
    }
    @media(min-width: 1200px) {
      #shopify-section-{{ section.id }} .block-video-content {
        height: {{ sst.mh_xl }}px !important;
      }
    }
    @media(min-width: 1441px) {
      #shopify-section-{{ section.id }} .block-video-content {
        height: {{ sst.mh_xxl }}px !important;
      }
    }
  {% endif %}

  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
      margin-bottom: {{ bst.distance_bottom_xs }}px;
    }
    {% if block.type == 'text' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text,
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a {
        color: {{ bst.t_c }};
        font-size: {{ bst.t_s | divided_by: 10.0 }}rem;
        line-height: {{ bst.t_lh }};
        letter-spacing: {{ bst.t_lt }}px;
        text-transform: {{ bst.t_tt }};
        max-width: {{ bst.t_m }}px;
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text a:hover {
        color: {{ bst.c_link_h }};
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text strong {
        color: {{ bst.tb_c }};
      }
    {% endif %}
  {% endfor %}
{% endstyle %}
<div class="color-{{ sst.color_section }}{{ bg_class_full }}">
  <div class="{{ sst.container }}">
    <div class="container-inner{{ bg_class_contain }}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="row spacing-0{% if sst.position == 'right' %} flex-lg-row-reverse{% endif %}">
        <div class="block_video col-xl-8 col-lg-7">
          <div class="block-video-content position-relative">
            {% if sst.video != blank %}
              {{ sst.video | video_tag: image_size: '1100x', autoplay: sst.autoplay, loop: true, controls: sst.controls, muted: sst.muted, data-id: section.id, data-alt: shop.name, style: "width: 100%;max-width: 100%;height: auto;object-fit: cover;" }}
              {% if sst.img_cover != blank %}
                <div class="bg-video__cover position-absolute w-100 h-100" data-id="{{ section.id }}"></div>
              {% endif %}
              <div class="btn-video__play position-absolute pointer align-items-center justify-content-center" data-id="{{ section.id }}">
                <span class="font-500 text-capitalize">{{ 'sections.video_with_text.play_video' | t }}</span>
                <i class="zmdi zmdi-play-circle-outline"></i>
              </div>
            {% else %}
              {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
              <div class="btn-video__play position-absolute pointer align-items-center justify-content-center" data-id="{{ section.id }}">
                <span class="font-500">{{ 'sections.video_with_text.play_video' | t }}</span>
                <i class="zmdi zmdi-play-circle-outline"></i>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="block_text position-relative col-xl-4 col-lg-5 d-flex align-items-center justify-content-center text-center">
          <div class="block-text-content">
            {% for block in section.blocks %}
              {% assign bst = block.settings %}
              {% if block.type == 'text' %}
                <div class="nov-text {{ bst.t_fw }} {{ bst.ff }} block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">{{ bst.text }}</div>
              {% endif %}
              {% if block.type == 'btn' %}
                <div class="block-btn block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
                  {% if bst.btn != blank %}
                    <a href="{{ bst.btn_link }}" class="btn {{ bst.btn_size }}">
                      <span>{{ bst.btn }}</span>
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
