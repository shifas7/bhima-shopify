{%- liquid 
  assign sst = section.settings
  
  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if sst.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}
{%- if settings.lang_iso_rtl != blank -%}
  {% assign list_iso_rtl = settings.lang_iso_rtl | downcase %}
  {% if list_iso_rtl contains request.locale.iso_code and settings.enable_rtl %}
    {% assign iso_rtl = true %}
  {% else %}
    {% assign iso_rtl = false %}
  {% endif %}
{%- endif -%}
{% style %}
  {% render 'nov-section-style' %}

  #shopify-section-{{ section.id }} .distance {
    padding-left: {{ sst.spacing_hori }}px;
    padding-right: {{ sst.spacing_hori }}px;
  }
  
  #shopify-section-{{ section.id }} .collec-title {
    font-size: {{ sst.t_s | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} .collec-desc {
    font-size: {{ sst.d_s | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} {
    --max-width: {{ sst.img_max_width }}px;
    --max-height: {{ sst.img_max_height }}px;
    --item-bg: {{ sst.item_bg }};
    --corner: {% if sst.img_round %}999px{% else %}{{ sst.img_corner }}px{% endif %};
    --title-color: {{ sst.t_color }};
    --title-letter-sapcing: {{ sst.t_ls }}px;
    --desc-color: {{ sst.desc_color }};
    --desc-letter-sapcing: {{ sst.d_ls }}px;
  }
  #shopify-section-{{ section.id }} .collec-item:hover {
    --item-bg: {{ sst.item_bg | color_darken: 10 }};
  }
  {% if sst.type == 'marquee' %}
    #shopify-section-{{ section.id }} .nov-scroll-slider {
      animation-duration: {{ sst.time }}s;
    }
    #shopify-section-{{ section.id }} .nov-scroll-slider:first-child {
      {% if iso_rtl %}margin-left{% else %}margin-right{% endif %}: {{ sst.spacing | times: 0.5 }}px;
    }
    {% if sst.spacing > 30 %}
      @media(max-width: 1500px) {
        #shopify-section-{{ section.id }} .nov-scroll-slider:first-child {
          {% if iso_rtl %}margin-left{% else %}margin-right{% endif %}: 15px;
        }
      }
      @media(max-width: 575px) {
        #shopify-section-{{ section.id }} .nov-scroll-slider:first-child {
          {% if iso_rtl %}margin-left{% else %}margin-right{% endif %}: 7.5px;
        }
      }
    {% endif %}
    #shopify-section-{{ section.id }} .sp-item {
      width: {{ 100 | divided_by: sst.xs | append: 'vw' }};
      flex: 0 0 {{ 100 | divided_by: sst.xs | append: 'vw' }};
    }
    @media(min-width:  576px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.sm | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.sm | append: 'vw' }};
      }
    }
    @media(min-width:  768px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.md | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.md | append: 'vw' }};
      }
    }
    @media(min-width:  992px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.lg | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.lg | append: 'vw' }};
      }
    }
    @media(min-width:  1200px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.xl | append: 'vw' }};
        flex: 0 0 {{ 100 | divided_by: sst.xl | append: 'vw' }};
      }
    }
    @media(min-width:  1441px) {
      #shopify-section-{{ section.id }} .sp-item {
        width: {{ 100 | divided_by: sst.xxl | append: 'vw' }};
        flex: 0 0 {{  100 | divided_by: sst.xxl | append: 'vw' }};
      }
    }
    @media(max-width: 575px) {
      #shopify-section-{{ section.id }} .nov-scroll-slider:first-child {
        {% if iso_rtl %}margin-left{% else %}margin-right{% endif %}: 7.5px;
      }
    }
  {% endif %}
{% endstyle %}
<div class="container-outer{{ bg_class_full }}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">

    <div class="container-inner{{ bg_class_contain }}">

      {% if sst.btn_view_all_label != blank %}
        <div class="d-lg-flex align-items-center justify-content-between mb-60">
          {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-0' %}
          <a href="{{ sst.btn_view_all_link }}" class="link mt-md-20">
            <span class="font-500">{{ sst.btn_view_all_label }}</span>
            <i class="zmdi zmdi-long-arrow-right"></i>
          </a>
        </div>
      {% else %}
        {% render 'heading-section', sub_position: sst.subheading_position %}
      {% endif %}

      <div class="nov-slick-carousel row spacing-{{ sst.spacing }}{% if sst.spacing > 30 %} spacing-lg-30{% endif %} spacing-xs-15 {{ sst.dots_color }} {{ sst.arrow_color }}"
        data-autoplay="{{ sst.autoplay }}"
        data-autoplaytimeout="{{ sst.autoplay_speed }}"
        data-loop="true"
        data-nav="{{ sst.show_nav }}"
        data-dots="{{ sst.show_dots }}" 
        data-items_xxl="{{ sst.xxl }}" 
        data-items_xl="{{ sst.xl }}" 
        data-items_lg="{{ sst.lg }}" 
        data-items_md="{{ sst.md }}" 
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-row="1"
        {% if sst.one_slider %}data-oneslider="1"{% endif %}>
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          <div class="block sp-item{% if sst.slider %} {% render 'number-to-col' %}{% endif %}">
            <div class="collec-item position-relative text-{{ sst.alignment }}{% if sst.show_bgitem %} show-bgitem{% endif %}">
              <div class="block-image position-relative overflow_hidden{% if sst.enable_animate_img %} nov-sh-image-2{% endif %}">
                {% if bst.image != blank %}
                  {% if bst.link != blank %}
                    <a href="{{ bst.link }}">
                  {% endif %}
                    {% render 'nov-aspect-image', image: bst.image %}
                  {% if bst.link != blank %}
                    </a>
                  {% endif %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% if sst.show_btn %}
                  <a href="{{ bst.link }}" class="btn-label btn {{ sst.btn_type }} color-{{ sst.btn_color }} position-absolute bottom-center">
                    <span>{{ 'sections.button.shop_now' | t }}</span>
                  </a>
                {% endif %}
                {% if sst.show_btn_arrow %}
                  <a href="{{ bst.link }}" class="btn-arrow btn {{ sst.btn_type }} color-{{ sst.btn_color }} position-absolute">
                    <i class="zmdi zmdi-long-arrow-right"></i>
                  </a>
                {% endif %}
              </div>
              {% if bst.cta_label != blank or bst.desc != blank %}
                <div class="block-bottom mt-25">
                  {% if bst.cta_label != blank %}
                    {% if bst.link != blank and sst.show_btn == false %}
                      <a href="{{ bst.link }}" class="collec-title color-hover">{{ bst.cta_label }}</a>
                    {% else %}
                      <div class="collec-title">{{ bst.cta_label }}</div>
                    {% endif %}
                  {% endif %}
                  {% if bst.desc != blank %}
                    <div class="collec-desc mt-10">{{ bst.desc }}</div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>  
    </div>
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% render 'no-blocks' %}
{% endif %}

