{%- liquid 
  assign sst = section.settings
  
  if section.settings.ss_bg_enable
    assign bg = " bg"
  endif
  if section.settings.class_section != blank
    assign class_section = section.settings.class_section | prepend: ' '
  endif
  assign class = 'distance' | append: bg | append: ' ' | append: section.settings.background_position | append: class_section
  if sst.background_size == 'full'
    assign bg_class_full = class | prepend: ' '
  else
    assign bg_class_contain = class | prepend: ' '
  endif
-%}
{% style %}
  {% render 'nov-section-style' %}
{% endstyle %}

<div class="container-outer{{ bg_class_full }}">
  <div class="{{ sst.container }}">
    {% render 'heading-section', sub_position: sst.subheading_position %}
    <div class="container-inner{{ bg_class_contain }}">
      <div class="block__parallax {% if sst.reverse %}reverseX_parallax{% else %}itemX_parallax{% endif %}" data-margin="100px 0px">
        <div class="d-flex" data-section-id="{{ section.id }}" style="--margin: {{ sst.spacing }}px; --corner: {{ sst.bd_radius }}px">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            <div class="gallery-image__item overflow_hidden position-relative{% if sst.style_img_1 %} nov-sh-image-1{% endif %}{% if sst.style_img_2 %} nov-sh-image-2{% endif %}">
              {% if bst.image != blank %}
                <a href="{{ bst.image | image_url: width: 1200 }}" class="d-block" data-fancybox="gallery">
                  {%- render 'nov-aspect-image', image: bst.image, aspect: sst.aspect -%}
                </a>
              {% else %}
                {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                {{ 'hero-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

